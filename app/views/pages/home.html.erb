<% content_for :title, "うさぎや - 福井の老舗和菓子店" %>
<% content_for :description, "福井県福井市にある老舗和菓子店うさぎや。伝統の味を守りながら、冷凍もちパイをはじめとした和菓子をお届けします。" %>

<div class="w-full">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-pink-50 via-orange-50 to-pink-100 rounded-2xl overflow-hidden mb-16">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\" 60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23000000\" fill-opacity=\"0.05\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        </div>

        <div class="relative px-8 py-16 md:py-24 text-center">
            <div class="inline-block border-4 border-gray-800 px-8 py-4 mb-6 bg-white">
                <h1 class="text-4xl md:text-6xl font-bold tracking-wider">うさぎや</h1>
            </div>

            <p class="text-xl md:text-2xl text-gray-700 mb-4 font-medium">福井の老舗和菓子店</p>
            <p class="text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
                伝統の味を守りながら、心を込めて作る和菓子。<br class="hidden md:block">
                福井の素材と職人の技が織りなす、やさしい味わいをお届けします。
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <%= link_to products_path, class: "w-full sm:w-auto bg-pink-600 hover:bg-pink-700 text-white font-bold py-4 px-10 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
                <span class="flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    商品一覧を見る
                </span>
                <% end %>

                <%= link_to new_order_path, class: "w-full sm:w-auto bg-white hover:bg-gray-50 text-pink-600 font-bold py-4 px-10 rounded-full border-2 border-pink-600 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
                <span class="flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    冷凍もちパイを注文
                </span>
                <% end %>
            </div>
        </div>
    </section>

    <!-- おすすめ・季節限定商品 -->
    <% if @featured_products.any? %>
    <section class="mb-16">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">おすすめ・季節限定商品</h2>
                <p class="text-gray-600">旬の味わいをお楽しみください</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <% @featured_products.each do |product| %>
            <%= link_to product_path(product), class: "group" do %>
            <div class="bg-white rounded-2xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-2xl transform hover:-translate-y-2">
                <div class="relative overflow-hidden aspect-square">
                    <% if product.image.attached? %>
                    <%= image_tag product.image, 
                    class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110",
                    alt: product.name,
                    loading: "lazy" %>
                    <% else %>
                    <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                        <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <% end %>

                    <!-- 季節限定バッジ -->
                    <div class="absolute top-4 right-4">
                        <span class="bg-pink-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
                            おすすめ
                        </span>
                    </div>
                </div>

                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-pink-600 transition-colors line-clamp-2">
                        <%= product.name %>
                    </h3>
                    <div class="flex items-baseline justify-between mb-3">
                        <p class="text-3xl font-bold text-pink-600">
                            ¥<%= number_with_delimiter(product.price) %>
                        </p>
                        <span class="text-sm text-gray-500">税込</span>
                    </div>
                    <p class="text-gray-600 text-sm line-clamp-3 leading-relaxed">
                        <%= product.description %>
                    </p>

                    <div class="mt-4 flex items-center text-pink-600 text-sm font-medium">
                        <span>詳しく見る</span>
                        <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>

        <div class="text-center mt-10">
            <%= link_to products_path, class: "inline-flex items-center text-pink-600 hover:text-pink-700 font-bold text-lg transition-colors group" do %>
            すべての商品を見る
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
            <% end %>
        </div>
    </section>
    <% end %>

    <!-- お知らせ -->
    <% if @notices.any? %>
    <section class="mb-16">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">お知らせ</h2>
                <p class="text-gray-600">最新情報をお届けします</p>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="divide-y divide-gray-100">
                <% @notices.each do |notice| %>
                <%= link_to notice_path(notice), class: "block hover:bg-pink-50 transition-colors duration-200 group" do %>
                <div class="p-6 flex items-center">
                    <div class="flex-shrink-0 mr-6">
                        <div class="bg-pink-100 text-pink-600 rounded-lg px-4 py-2 text-center min-w-[80px]">
                            <div class="text-xs font-medium"><%= notice.published_at.strftime("%Y") %></div>
                            <div class="text-2xl font-bold"><%= notice.published_at.strftime("%m/%d") %></div>
                        </div>
                    </div>

                    <div class="flex-1 min-w-0">
                        <h3 class="text-lg font-bold text-gray-800 mb-1 group-hover:text-pink-600 transition-colors">
                            <%= notice.title %>
                        </h3>
                        <p class="text-gray-600 text-sm line-clamp-2">
                            <%= notice.content.truncate(100) %>
                        </p>
                    </div>

                    <div class="flex-shrink-0 ml-4">
                        <svg class="w-6 h-6 text-gray-400 group-hover:text-pink-600 transition-all group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
                <% end %>
                <% end %>
            </div>
        </div>

        <div class="text-center mt-6">
            <%= link_to notices_path, class: "inline-flex items-center text-pink-600 hover:text-pink-700 font-bold transition-colors group" do %>
            すべてのお知らせを見る
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
            <% end %>
        </div>
    </section>
    <% end %>

    <!-- 営業カレンダー -->
    <section class="mb-16">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">営業カレンダー</h2>
                <p class="text-gray-600">営業日をご確認ください</p>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden p-6">
            <!-- カレンダーヘッダー -->
            <div class="flex items-center justify-between mb-6">
                <%= link_to root_path(year: Date.today.year, month: Date.today.month - 1), 
          class: "p-2 hover:bg-gray-100 rounded-lg transition-colors" do %>
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <% end %>

                <h3 class="text-2xl font-bold text-gray-800">
                    <%= Date.today.year %>年<%= Date.today.month %>月
                </h3>

                <%= link_to root_path(year: Date.today.year, month: Date.today.month + 1), 
          class: "p-2 hover:bg-gray-100 rounded-lg transition-colors" do %>
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <% end %>
            </div>

            <!-- カレンダーグリッド -->
            <div class="grid grid-cols-7 gap-2">
                <!-- 曜日ヘッダー -->
                <% %w[日 月 火 水 木 金 土].each_with_index do |day, index| %>
                <div class="text-center font-bold py-3 text-sm <%= index == 0 ? 'text-red-600' : index == 6 ? 'text-blue-600' : 'text-gray-700' %>">
                    <%= day %>
                </div>
                <% end %>

                <!-- カレンダー日付 -->
                <% calendar = generate_calendar(Date.today.year, Date.today.month, @calendar_events) %>
                <% calendar.each do |day_info| %>
                <div class="relative aspect-square <%= calendar_day_class(day_info) %> rounded-lg overflow-hidden transition-all hover:shadow-md">
                    <% if day_info[:date] %>
                    <div class="p-2 h-full flex flex-col">
                        <div class="font-semibold text-sm mb-1">
                            <%= day_info[:date].day %>
                        </div>

                        <% if day_info[:events].any? %>
                        <div class="flex-1 flex flex-col justify-center space-y-1">
                            <% day_info[:events].take(2).each do |event| %>
                            <span class="text-xs px-2 py-0.5 rounded-full <%= event_badge_color_class(event.event_type) %> truncate">
                                <%= event_type_label(event.event_type) %>
                            </span>
                            <% end %>
                            <% if day_info[:events].count > 2 %>
                            <span class="text-xs text-gray-500 text-center">+<%= day_info[:events].count - 2 %></span>
                            <% end %>
                        </div>
                        <% end %>
                    </div>
                    <% end %>
                </div>
                <% end %>
            </div>

            <!-- カレンダー凡例 -->
            <div class="mt-6 pt-6 border-t grid grid-cols-2 md:grid-cols-5 gap-3 text-sm">
                <div class="flex items-center">
                    <span class="w-4 h-4 bg-red-50 border border-red-200 rounded mr-2"></span>
                    <span class="text-gray-700">日曜日</span>
                </div>
                <div class="flex items-center">
                    <span class="w-4 h-4 bg-blue-50 border border-blue-200 rounded mr-2"></span>
                    <span class="text-gray-700">土曜日</span>
                </div>
                <div class="flex items-center">
                    <span class="w-4 h-4 bg-gray-200 border border-gray-300 rounded mr-2"></span>
                    <span class="text-gray-700">定休日</span>
                </div>
                <div class="flex items-center">
                    <span class="w-4 h-4 bg-green-100 border border-green-200 rounded mr-2"></span>
                    <span class="text-gray-700">販売開始</span>
                </div>
                <div class="flex items-center">
                    <span class="w-4 h-4 bg-orange-100 border border-orange-200 rounded mr-2"></span>
                    <span class="text-gray-700">販売終了</span>
                </div>
            </div>
        </div>
    </section>

    <!-- 外部リンク -->
    <section class="mb-16">
        <div class="mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">外部リンク</h2>
            <p class="text-gray-600">SNSやふるさと納税でもご利用いただけます</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <%= link_to "https://www.satofull.jp/products/list.php?s4=18&q=%E3%81%86%E3%81%95%E3%81%8E%E3%82%84&cnt=60&p=1", 
        target: "_blank", 
        rel: "noopener noreferrer", 
        class: "group" do %>
            <div class="bg-white rounded-2xl shadow-md p-8 text-center transition-all duration-300 hover:shadow-2xl transform hover:-translate-y-2">
                <div class="w-20 h-20 mx-auto mb-4 bg-orange-100 rounded-full flex items-center justify-center text-4xl group-hover:scale-110 transition-transform">
                    🎁
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-pink-600 transition-colors">さとふる</h3>
                <p class="text-gray-600 mb-4">ふるさと納税でお得に購入できます</p>
                <span class="inline-flex items-center text-pink-600 text-sm font-medium">
                    サイトを見る
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                </span>
            </div>
            <% end %>

            <%= link_to "https://page.line.me/296kbwry?openQrModal=true", 
        target: "_blank", 
        rel: "noopener noreferrer", 
        class: "group" do %>
            <div class="bg-white rounded-2xl shadow-md p-8 text-center transition-all duration-300 hover:shadow-2xl transform hover:-translate-y-2">
                <div class="w-20 h-20 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center text-4xl group-hover:scale-110 transition-transform">
                    💬
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-pink-600 transition-colors">LINE公式</h3>
                <p class="text-gray-600 mb-4">最新情報をお届けします</p>
                <span class="inline-flex items-center text-pink-600 text-sm font-medium">
                    友だち追加
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                </span>
            </div>
            <% end %>

            <%= link_to "https://www.instagram.com/usagiya.fukui/?hl=ja", 
        target: "_blank", 
        rel: "noopener noreferrer", 
        class: "group" do %>
            <div class="bg-white rounded-2xl shadow-md p-8 text-center transition-all duration-300 hover:shadow-2xl transform hover:-translate-y-2">
                <div class="w-20 h-20 mx-auto mb-4 bg-pink-100 rounded-full flex items-center justify-center text-4xl group-hover:scale-110 transition-transform">
                    📷
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-pink-600 transition-colors">Instagram</h3>
                <p class="text-gray-600 mb-4">日々の様子を発信中</p>
                <span class="inline-flex items-center text-pink-600 text-sm font-medium">
                    フォローする
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                </span>
            </div>
            <% end %>
        </div>
    </section>

    <!-- お問い合わせCTA -->
    <section class="text-center bg-gradient-to-br from-pink-50 to-orange-50 rounded-2xl p-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">お気軽にお問い合わせください</h2>
        <p class="text-gray-600 mb-8">商品やご注文に関するご質問など、何でもお答えします</p>
        <%= link_to new_inquiry_path, class: "inline-flex items-center bg-gray-700 hover:bg-gray-800 text-white font-bold py-4 px-10 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        お問い合わせフォームへ
        <% end %>
    </section>
</div>