        </div>
        <div class="slide" data-slide-index="2">
            <%= image_tag 'top/motipai.jpg', alt: 'もちパイ' %>
        </div>
        <div class="slide slide-clickable" data-slide-index="3">
            <%= image_tag 'top/satofuru.jpg', alt: 'さとふる' %>
        </div>
    </section>

    <!-- コンテンツエリア -->
    <div class="content-wrapper">
        <!-- 店舗情報セクション -->
        <section class="shop-info" id="shop-info">
            <h2>店舗情報</h2>
            <div class="info-grid-new">
                <div class="info-column">
                    <div class="info-section">
                        <h3>住所</h3>
                        <p class="postal-code">〒916-0071</p>
                        <p class="address">福井県鯖江市持明寺町5-10-1</p>
                    </div>
                    <div class="info-section">
                        <h3>アクセス</h3>
                        <p>
                            <%= link_to "Googleマップで見る", "https://maps.google.com/?q=福井県鯖江市持明寺町5-10-1", target: "_blank", class: "map-link" %>
                        </p>
                    </div>
                </div>

                <div class="info-column">
                    <div class="info-section">
                        <h3>営業時間</h3>
                        <p class="business-hours">平日・土曜日: 9:00〜18:00</p>
                        <p class="closed-day">定休日: 日曜日</p>
                        <p class="irregular-holiday">(月曜日に不定休あり)</p>
                        <p class="note">※不定休は「お知らせ」または<br>「営業カレンダー」より確認してください</p>
                    </div>
                </div>

                <div class="info-column">
                    <div class="info-section">
                        <h3>電話番号</h3>
                        <p class="phone">
                            TEL: <a href="tel:0778-62-0861">0778-62-0861</a>
                        </p>
                    </div>
                    <div class="info-section">
                        <h3>SNS</h3>
                        <div class="sns-links">
                            <%= link_to 'https://page.line.me/296kbwry?openQrModal=true', target: '_blank', class: 'sns-icon-img' do %>
                            <%= image_tag 'shop/line.png', alt: 'LINE', class: 'sns-image' %>
                            <% end %>
                            <%= link_to 'https://www.instagram.com/usagiya.fukui/?hl=ja', target: '_blank', class: 'sns-icon-img' do %>
                            <%= image_tag 'shop/instagram.png', alt: 'Instagram', class: 'sns-image' %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JavaScriptでスライドショーとハンバーガーメニューを制御 -->
    <script>
        // グローバル変数で管理
        window.usagiyaSlideshow = window.usagiyaSlideshow || null;

        function initializePage() {
            console.log('=== ページ初期化開始 ===');

            // 既存のイベントを完全にクリア
            if (window.usagiyaSlideshow) {
                console.log('既存のスライドショーをクリア');
                clearInterval(window.usagiyaSlideshow.timer);
            }

            // スライドショー
            let currentSlide = 0;
            const slides = document.querySelectorAll('.slide');
            console.log('スライド数:', slides.length);

            function showSlide(index) {
                slides.forEach((slide, i) => {
                    slide.classList.remove('active');
                    if (i === index) {
                        slide.classList.add('active');
                    }
                });
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }

            // スライドショーの開始
            const timer = slides.length > 0 ? setInterval(nextSlide, 5000) : null;

            // クリックイベントは親要素で委譲
            const mainVisual = document.querySelector('.main-visual');

            // 既存のイベントリスナーを削除するため、クローンで置き換え
            const newMainVisual = mainVisual.cloneNode(true);
            mainVisual.parentNode.replaceChild(newMainVisual, mainVisual);

            // 新しい要素でスライドを再取得
            const newSlides = newMainVisual.querySelectorAll('.slide');

            // イベント委譲で処理
            newMainVisual.addEventListener('click', function(e) {
                // クリックされた要素がスライドかその子要素か確認
                let clickedSlide = e.target.closest('.slide');

                if (clickedSlide) {
                    const slideIndex = Array.from(newSlides).indexOf(clickedSlide);
                    console.log(`クリックされたスライドのインデックス: ${slideIndex}`);

                    if (clickedSlide.classList.contains('slide-clickable')) {
                        console.log('*** 4枚目（クリック可能）がクリックされました ***');
                        e.preventDefault();
                        window.open('https://www.satofull.jp/products/list.php?s4=18&q=%E3%81%86%E3%81%95%E3%81%8E%E3%82%84&cnt=60&p=1', '_blank');
                    } else {
                        console.log(`*** スライド${slideIndex + 1}（クリック不可）がクリックされました ***`);
                        e.preventDefault();
                    }
                }
            });

            // カーソルスタイルを設定
            newSlides.forEach((slide, index) => {
                if (slide.classList.contains('slide-clickable')) {
                    slide.style.cursor = 'pointer';
                    const img = slide.querySelector('img');
                    if (img) img.style.cursor = 'pointer';
                } else {
                    slide.style.cursor = 'default';
                    const img = slide.querySelector('img');
                    if (img) img.style.cursor = 'default';
                }
            });

            // グローバルに保存
            window.usagiyaSlideshow = {
                timer: timer,
                currentSlide: currentSlide,
                showSlide: showSlide
            };

            // ハンバーガーメニュー
            const hamburger = document.getElementById('hamburger');
            const sideMenu = document.getElementById('sideMenu');
            const overlay = document.getElementById('overlay');
            const closeMenu = document.getElementById('closeMenu');

            if (hamburger && sideMenu && overlay && closeMenu) {
                // クローンで既存イベントをクリア
                const newHamburger = hamburger.cloneNode(true);
                hamburger.parentNode.replaceChild(newHamburger, hamburger);

                const newCloseMenu = closeMenu.cloneNode(true);
                closeMenu.parentNode.replaceChild(newCloseMenu, closeMenu);

                const newOverlay = overlay.cloneNode(true);
                overlay.parentNode.replaceChild(newOverlay, overlay);

                newHamburger.addEventListener('click', function(e) {
                    e.preventDefault();
                    sideMenu.classList.add('active');
                    newOverlay.classList.add('active');
                });

                newCloseMenu.addEventListener('click', function(e) {
                    e.preventDefault();
                    sideMenu.classList.remove('active');
                    newOverlay.classList.remove('active');
                });

                newOverlay.addEventListener('click', function(e) {
                    e.preventDefault();
                    sideMenu.classList.remove('active');
                    newOverlay.classList.remove('active');
                });
            }

            console.log('=== ページ初期化完了 ===');
        }

        // 初回読み込み
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializePage);
        } else {
            initializePage();
        }

        // Turbo対応
        document.addEventListener('turbo:load', initializePage);
    </script>
</body>

</html>