<%= content_for :page_scripts do %>
<script>
    // Turbo対応: スライドショー機能
    function initializeSlideshow() {
        const slides = document.querySelectorAll('.slide');
        if (!slides || slides.length === 0) return;

        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                if (i === index) {
                    slide.classList.add('active');
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides.length;
            showSlide(currentSlide);
        }

        // 既存のインターバルをクリア
        if (window.slideshowInterval) {
            clearInterval(window.slideshowInterval);
        }

        // 5秒ごとにスライド切り替え
        window.slideshowInterval = setInterval(nextSlide, 5000);

        // さとふるスライド（slide-clickableクラスを持つもの）のクリックイベント
        // 既存のイベントリスナーをすべて削除してから新しく追加
        const clickableSlides = document.querySelectorAll('.slide-clickable');
        clickableSlides.forEach(function(slide) {
            // 要素を複製して置き換え（既存のイベントリスナーを削除）
            const newSlide = slide.cloneNode(true);
            slide.parentNode.replaceChild(newSlide, slide);
        });

        // 新しく追加されたクリック可能なスライドにイベントリスナーを追加
        document.querySelectorAll('.slide-clickable').forEach(function(slide) {
            slide.addEventListener('click', function(e) {
                // アクティブなスライドのみクリック可能
                if (this.classList.contains('active')) {
                    const url = this.getAttribute('data-url');
                    if (url) {
                        window.open(url, '_blank');
                    }
                }
            });
        });
    }

    // 初回読み込み時
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeSlideshow);
    } else {
        initializeSlideshow();
    }

    // Turboページ遷移時
    document.addEventListener('turbo:load', initializeSlideshow);
    document.addEventListener('turbo:render', initializeSlideshow);

    // ページ離脱時にインターバルをクリア
    document.addEventListener('turbo:before-render', function() {
        if (window.slideshowInterval) {
            clearInterval(window.slideshowInterval);
        }
    });
</script>
<% end %>