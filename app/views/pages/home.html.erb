<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>御菓子処うさぎや</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
            }

            to {
                opacity: 0;
            }
        }

        .slide-image {
            animation: fadeIn 1s ease-in-out;
        }

        .slide-image.fade-out {
            animation: fadeOut 1s ease-in-out;
        }
    </style>
</head>

<body class="bg-black text-white overflow-x-hidden">
    <!-- ヘッダー -->
    <header class="fixed top-0 left-0 right-0 z-50 flex items-center justify-between px-8 py-6">
        <!-- ロゴ -->
        <div class="flex items-center">
            <a href="<%= root_path %>" class="text-2xl font-serif tracking-wider hover:opacity-70 transition-opacity">
                御菓子処 うさぎや
            </a>
        </div>

        <!-- ナビゲーション -->
        <nav class="hidden md:flex items-center space-x-8 text-sm tracking-wide">
            <%= link_to "ホーム", root_path, class: "hover:opacity-70 transition-opacity" %>
            <%= link_to "おすすめ商品", products_path(category: "recommended"), class: "hover:opacity-70 transition-opacity" %>
            <%= link_to "季節限定商品", products_path(category: "seasonal"), class: "hover:opacity-70 transition-opacity" %>
            <%= link_to "お知らせ", notices_path, class: "hover:opacity-70 transition-opacity" %>
            <%= link_to "お問い合わせ", new_inquiry_path, class: "hover:opacity-70 transition-opacity" %>
        </nav>

        <!-- ハンバーガーメニュー -->
        <button id="menuToggle" class="relative w-10 h-10 flex flex-col items-center justify-center group">
            <div class="w-8 h-0.5 bg-white transition-all duration-300 group-hover:-translate-y-1"></div>
            <div class="w-8 h-0.5 bg-white mt-2 transition-all duration-300 group-hover:translate-y-1"></div>
        </button>
    </header>

    <!-- メインビジュアル -->
    <div class="relative w-full h-screen">
        <div id="slideshow" class="relative w-full h-screen">
            <%= image_tag "top/mamedaifuku_kusamoti.jpg", class: "slide-image absolute inset-0 w-full h-full object-cover", data: { slide: 0 } %>
            <%= image_tag "top/usagimanju.jpg", class: "slide-image absolute inset-0 w-full h-full object-cover opacity-0", data: { slide: 1 } %>
            <%= image_tag "top/motipai.jpg", class: "slide-image absolute inset-0 w-full h-full object-cover opacity-0", data: { slide: 2 } %>
            <div class="absolute inset-0 bg-black opacity-30"></div>
        </div>

        <!-- スクロール可能なコンテンツ -->
        <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black to-transparent">
            <div class="max-w-4xl mx-auto text-center space-y-4">
                <h2 class="text-xl font-serif mb-4">店舗情報</h2>
                <p class="text-sm">〒910-0003 福井県福井市松本3丁目16-14</p>
                <p class="text-sm">営業時間: 9:00 - 18:00 / 定休日: 水曜日</p>
                <div class="flex justify-center space-x-6 mt-6">
                    <a href="https://line.me/ti/p/your-line-id" target="_blank" class="hover:opacity-70 transition-opacity">
                        <div class="text-sm">LINE</div>
                    </a>
                    <a href="https://www.instagram.com/your-instagram" target="_blank" class="hover:opacity-70 transition-opacity">
                        <div class="text-sm">Instagram</div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- サイドメニュー -->
    <div id="sideMenu" class="fixed top-0 right-0 h-full w-full md:w-1/2 bg-white text-black transform translate-x-full transition-transform duration-500 z-50">
        <button id="menuClose" class="absolute top-6 right-8 text-black">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>

        <div class="flex h-full">
            <!-- メニューリスト -->
            <div class="w-full md:w-1/2 p-12 flex flex-col justify-center space-y-6 overflow-y-auto">
                <h2 class="text-xs tracking-widest mb-8 opacity-50">MENU</h2>
                <%= link_to "御菓子処うさぎやの想い", "#philosophy", class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "おすすめ商品", products_path(category: "recommended"), class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "季節限定商品", products_path(category: "seasonal"), class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "冷凍もちパイの発送", "#frozen-shipping", class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "さとふる", "https://www.satofull.jp/", target: "_blank", class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "お知らせ", notices_path, class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>
                <%= link_to "営業カレンダー", "#calendar", class: "text-2xl font-serif hover:opacity-70 transition-opacity" %>

                <div class="pt-8 space-y-4">
                    <a href="https://line.me/ti/p/your-line-id" target="_blank" class="block text-sm hover:opacity-70 transition-opacity">LINE</a>
                    <a href="https://www.instagram.com/your-instagram" target="_blank" class="block text-sm hover:opacity-70 transition-opacity">Instagram</a>
                    <%= link_to "お問い合わせ", new_inquiry_path, class: "block text-sm hover:opacity-70 transition-opacity" %>
                </div>
            </div>

            <!-- おすすめ商品画像 -->
            <div class="hidden md:block w-1/2 bg-gradient-to-br from-pink-100 to-amber-50 p-12">
                <div class="h-full flex flex-col justify-center">
                    <h3 class="text-xs tracking-widest mb-4 opacity-50">FEATURED</h3>
                    <div class="bg-white rounded-lg shadow-xl overflow-hidden">
                        <%= image_tag "products/mamedaifuku.jpg", alt: "おすすめ商品", class: "w-full h-auto" %>
                    </div>
                    <p class="mt-6 text-center font-serif text-lg">季節の和菓子</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // スライドショー機能
        let currentSlide = 0;
        const slides = document.querySelectorAll('[data-slide]');
        const totalSlides = slides.length;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                if (i === index) {
                    slide.style.opacity = '1';
                } else {
                    slide.style.opacity = '0';
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            showSlide(currentSlide);
        }

        // 4秒ごとにスライド切り替え
        setInterval(nextSlide, 4000);

        // メニューの開閉
        const menuToggle = document.getElementById('menuToggle');
        const menuClose = document.getElementById('menuClose');
        const sideMenu = document.getElementById('sideMenu');

        menuToggle.addEventListener('click', () => {
            sideMenu.classList.remove('translate-x-full');
        });

        menuClose.addEventListener('click', () => {
            sideMenu.classList.add('translate-x-full');
        });
    </script>
</body>

</html>