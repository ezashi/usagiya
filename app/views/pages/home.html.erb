<div data-turbo="false">
    <style>
        /* ホームページ専用スタイル */
        html,
        body {
            margin: 0 !important;
            padding: 0 !important;
            overflow-x: hidden !important;
            background-color: #ffffff !important;
            width: 100% !important;
        }

        /* メインビジュアル - 画面いっぱい（レスポンシブ対応） */
        .main-visual {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #000;
            margin: 0;
            padding: 0;
        }

        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
            pointer-events: none;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .slide.active {
            opacity: 1;
            z-index: 1;
            pointer-events: auto;
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: block;
        }

        /* さとふるスライドのみクリック可能 */
        .slide-clickable {
            cursor: pointer;
        }

        .slide-clickable:hover img {
            transform: scale(1.05);
            transition: transform 0.3s;
        }

        /* 他のスライドは通常のカーソル */
        .slide:not(.slide-clickable) {
            cursor: default;
        }

        /* コンテンツエリア */
        .content-wrapper {
            max-width: 1400px;
            margin: 0 auto !important;
            padding: 60px 20px;
            width: 100%;
            box-sizing: border-box;
            background-color: #ffffff;
        }

        .sns-links {
            display: flex;
            gap: 15px;
            margin-top: 10px;
            justify-content: center;
        }

        .sns-icon-img {
            display: block;
            transition: opacity 0.3s;
        }

        .sns-icon-img:hover {
            opacity: 0.7;
        }

        .sns-image {
            width: 50px;
            height: 50px;
            object-fit: contain;
        }

        /* レスポンシブ対応 */
        @media (max-width: 768px) {
            .main-visual {
                height: 60vh;
            }

            .slide img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                display: block;
                object-position: center;
            }

            .info-grid-new {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .shop-info {
                padding: 40px 20px;
            }

            .shop-info h2 {
                font-size: 1.5rem;
            }

            .shop-map iframe {
                height: 300px;
            }
        }

        /* 横向きモバイルの対応 */
        @media (max-width: 768px) and (orientation: landscape) {
            .main-visual {
                height: 80vh;
            }
        }

        @media (max-width: 480px) {
            .main-visual {
                height: 50vh;
                /* 小型モバイルではさらに調整 */
            }
        }
    </style>

    <!-- メインビジュアル（画面いっぱい） -->
    <section class="main-visual">
        <div class="slide active" data-slide-index="0">
            <%= image_tag 'top/mamedaifuku_kusamoti.jpg', alt: '豆大福と草餅' %>
        </div>
        <div class="slide" data-slide-index="1">
            <%= image_tag 'top/usagimanju.jpg', alt: 'うさぎまんじゅう' %>
        </div>
        <div class="slide" data-slide-index="2">
            <%= image_tag 'top/motipai.jpg', alt: 'もちパイ' %>
        </div>
        <div class="slide slide-clickable" data-slide-index="3" data-url="https://www.satofull.jp/products/list.php?s4=18&q=%E3%81%86%E3%81%95%E3%81%8E%E3%82%84&cnt=60&p=1">
            <%= image_tag 'top/satofuru.jpg', alt: 'さとふる' %>
        </div>
    </section>

    <!-- コンテンツエリア -->
    <div class="content-wrapper">
        <!-- 店舗情報セクション -->
        <%= render 'shared/shop_info' %>
    </div>

    <script>
        // ホームページのスライドショー（Turbo無効化済み）
        (function() {
            'use strict';

            console.log('=== Slideshow script initializing ===');

            let slideshowInterval = null;
            let currentSlide = 0;
            let slides = null;

            function initializeSlideshow() {
                // 初期化済みチェック
                const mainVisual = document.querySelector('.main-visual');
                if (!mainVisual) {
                    console.warn('Main visual not found');
                    return;
                }

                if (mainVisual.dataset.initialized === 'true') {
                    console.log('Slideshow already initialized, skipping');
                    return;
                }

                slides = document.querySelectorAll('.main-visual .slide');
                console.log('Found slides:', slides.length);

                if (!slides || slides.length === 0) {
                    console.warn('No slides found');
                    return;
                }

                // すべてのスライドからactiveクラスを削除
                slides.forEach(slide => slide.classList.remove('active'));

                // 最初のスライドをアクティブに
                if (slides[0]) {
                    slides[0].classList.add('active');
                    console.log('First slide activated');
                }

                currentSlide = 0;

                // スライド切り替え関数
                function nextSlide() {
                    if (!slides || slides.length === 0) return;

                    slides[currentSlide].classList.remove('active');
                    currentSlide = (currentSlide + 1) % slides.length;
                    slides[currentSlide].classList.add('active');
                }

                // 5秒ごとに自動切り替え
                slideshowInterval = setInterval(nextSlide, 5000);

                // クリック可能なスライドの処理
                setupClickableSlides();

                // 初期化済みフラグを設定
                mainVisual.dataset.initialized = 'true';

                console.log('Slideshow initialized successfully!');
            }

            function setupClickableSlides() {
                const clickableSlides = document.querySelectorAll('.slide-clickable');
                console.log('Setting up clickable slides:', clickableSlides.length);

                clickableSlides.forEach(function(slide) {
                    // 既に初期化済みかチェック
                    if (slide.dataset.clickInitialized === 'true') {
                        console.log('Slide already has click handler, skipping');
                        return;
                    }

                    // クリックハンドラーを追加
                    slide.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();

                        if (this.classList.contains('active')) {
                            const url = this.getAttribute('data-url');
                            if (url) {
                                console.log('Opening URL:', url);
                                window.open(url, '_blank', 'noopener,noreferrer');
                            }
                        }
                    });

                    // 初期化済みフラグを設定
                    slide.dataset.clickInitialized = 'true';
                });
            }

            // ページ読み込み完了時に初期化
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initializeSlideshow);
            } else {
                initializeSlideshow();
            }

            // クリーンアップ（ページ離脱時）
            window.addEventListener('beforeunload', function() {
                if (slideshowInterval) {
                    clearInterval(slideshowInterval);
                }
            });

            console.log('=== Slideshow script setup complete ===');
        })();
    </script>
</div>