<script>
    // スムーズスクロールとアニメーションの実装
    document.addEventListener('DOMContentLoaded', function() {
        // Intersection Observer でスクロールアニメーション
        const observerOptions = {
            root: null,
            rootMargin: '-10% 0px -10% 0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // サブタイトルとテキストにvisibleクラスを追加
                    const subtitle = entry.target.querySelector('.subtitle');
                    const textContent = entry.target.querySelector('.text-content');

                    if (subtitle) {
                        setTimeout(() => {
                            subtitle.classList.add('visible');
                        }, 100);
                    }

                    if (textContent) {
                        setTimeout(() => {
                            textContent.classList.add('visible');
                        }, subtitle ? 300 : 100);
                    }
                }
            });
        }, observerOptions);

        const imageSections = document.querySelectorAll('.image-section');
        imageSections.forEach(section => {
            observer.observe(section);
        });

        // スクロールインジケーターのクリック処理
        const scrollIndicators = document.querySelectorAll('.scroll-indicator');
        const allSections = document.querySelectorAll('.title-section, .image-section');

        scrollIndicators.forEach((indicator, index) => {
            indicator.addEventListener('click', function() {
                // 最後のセクション（画像セクション3）の場合は画像セクション2へ
                const currentSection = indicator.closest('.image-section');
                const isLastSection = currentSection && currentSection.dataset.section === '3';

                if (isLastSection) {
                    // 画像セクション2へスクロール
                    const targetSection = allSections[2]; // 0: title, 1: image1, 2: image2
                    if (targetSection) {
                        targetSection.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                } else {
                    // 次のセクションへ
                    const nextSection = allSections[index + 1];
                    if (nextSection) {
                        nextSection.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        // パララックス効果
        window.addEventListener('scroll', function() {
            const imageSections = document.querySelectorAll('.image-section');
            imageSections.forEach(section => {
                const rect = section.getBoundingClientRect();
                const scrollPercent = (window.innerHeight - rect.top) / (window.innerHeight + rect.height);
                const backgroundImage = section.querySelector('.background-image');
                if (backgroundImage && scrollPercent >= 0 && scrollPercent <= 1) {
                    backgroundImage.style.transform = `translateY(${(scrollPercent - 0.5) * 20}%)`;
                }
            });
        });
    });
</script>