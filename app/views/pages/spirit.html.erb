<% content_for :title, "御菓子処うさぎやの想い" %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #000;
        color: #fff;
        overflow-x: hidden;
    }

    .spirit-container {
        width: 100%;
        height: 100%;
    }

    /* タイトルセクション */
    .title-section {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: #eee;
        position: relative;
    }

    .spirit-logo-image {
        width: 500px;
        height: auto;
        margin-bottom: 2rem;
        animation: fadeInScale 1.5s ease-out;
    }

    @keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* 画像セクション */
    .image-section {
        min-height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 2;
    }

    .content-wrapper {
        position: relative;
        z-index: 3;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: baseline;
    }

    .subtitle {
        opacity: 0;
        transform: translateX(-50px);
        transition: all 1s ease-out;
    }

    .subtitle.visible {
        opacity: 1;
        transform: translateX(0);
    }

    .subtitle h2 {
        font-size: 35px;
        font-weight: bold;
        color: #fff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        margin-bottom: 1rem;
    }

    .text-content {
        opacity: 0;
        transform: translateX(50px);
        transition: all 1s ease-out 0.3s;
    }

    .text-content.visible {
        opacity: 1;
        transform: translateX(0);
    }

    .text-content p {
        font-size: 1.1rem;
        line-height: 2;
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
        margin-bottom: 1rem;
    }

    /* スクロールインジケーター */
    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 4;
        width: 40px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s;
    }

    .scroll-indicator:hover {
        transform: translateX(-50%) scale(1.1);
    }

    .scroll-indicator.with-arrow {
        animation: bounce 2s infinite;
    }

    /* 上向きスクロールインジケーター用 */
    .scroll-indicator.scroll-to-top {
        animation: bounceUp 2s infinite;
    }

    @keyframes bounce {

        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateX(-50%) translateY(0);
        }

        40% {
            transform: translateX(-50%) translateY(-10px);
        }

        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }

    @keyframes bounceUp {

        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateX(-50%) translateY(0);
        }

        40% {
            transform: translateX(-50%) translateY(10px);
        }

        60% {
            transform: translateX(-50%) translateY(5px);
        }
    }

    .scroll-indicator svg {
        width: 30px;
        height: 30px;
        color: #fff;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
    }

    .scroll-progress {
        width: 2px;
        height: 40px;
        background: linear-gradient(to bottom, #fff 0%, transparent 100%);
        animation: scrollDown 2s infinite;
    }

    @keyframes scrollDown {
        0% {
            transform: translateY(-100%);
            opacity: 0;
        }

        50% {
            opacity: 1;
        }

        100% {
            transform: translateY(100%);
            opacity: 0;
        }
    }

    /* レスポンシブ対応 */
    @media (max-width: 768px) {
        .spirit-logo-image {
            width: 300px;
        }

        .content-wrapper {
            grid-template-columns: 1fr;
            padding: 2rem 1rem;
            gap: 2rem;
        }

        .subtitle h2 {
            font-size: 1.8rem;
        }

        .text-content p {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .spirit-logo-image {
            width: 300px;
        }

        .subtitle h2 {
            font-size: 1.5rem;
        }

        .text-content p {
            font-size: 0.9rem;
        }
    }
</style>

<div class="spirit-container">
    <section class="title-section" id="section-0">
        <%= image_tag 'usagiya_logo.png', class: 'spirit-logo-image', alt: '御菓子処うさぎやの想い' %>

        <div class="scroll-indicator with-arrow" data-target="section-1">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </section>

    <section class="image-section" id="section-1" data-section="1">
        <%= image_tag 'shop/motipai_danmen.png', class: 'background-image', alt: 'もちパイ断面' %>
        <div class="overlay"></div>
        <div class="content-wrapper">
            <div></div> <!-- スペーサー -->
            <div class="text-content">
                <p>
                    福井県鯖江市の 御菓子処うさぎやは、材料はできるかぎり国内産を使用して、
                    ひとつひとつ心を込めて作っております。
                    お客様に新鮮で美味しいものを味わっていただくため、
                    大量生産はせずに手作りで、できる範囲で製造をさせていただいております。
                    和の味にこだわる、うさぎやのお菓子を是非ご賞味ください。
                </p>

                <br>

                <p>
                    当店の御菓子を召し上がっていただき、ホッと幸せなひとときを感じていただければと思っております。
                    そして、 "御菓子もお店もスタッフも" 全てをお客様に受け入れていただけて、「また来店したい」と思っていただけるよう心掛けております。
                </p>
            </div>
        </div>

        <div class="scroll-indicator" data-target="section-2">
            <div class="scroll-progress"></div>
        </div>
    </section>

    <section class="image-section" id="section-2" data-section="2">
        <%= image_tag 'shop/moti_pai.png', class: 'background-image', alt: 'もちパイ' %>
        <div class="overlay"></div>
        <div class="content-wrapper">
            <div class="subtitle">
                <h2>新鮮できたての御菓子</h2>
            </div>
            <div class="text-content">
                <p>
                    なぜ新鮮なものにこだわるか…それはもちろん、できたてが一番おいしいからです。
                    ですから、うさぎやでは1番人気の「もちパイ」を事前連絡いただけると、来店時間に合わせて焼きたてしています!
                    事前に注文いただければ合わせて調製いたしますのでお気軽にお問い合わせくださいませ。
                </p>
            </div>
        </div>

        <div class="scroll-indicator" data-target="section-3">
            <div class="scroll-progress"></div>
        </div>
    </section>

    <section class="image-section" id="section-3" data-section="3">
        <%= image_tag 'shop/dorayaki.png', class: 'background-image', alt: 'どら焼き' %>
        <div class="overlay"></div>
        <div class="content-wrapper">
            <div class="subtitle">
                <h2>なるべく添加物を使わない御菓子</h2>
            </div>
            <div class="text-content">
                <p>
                    御菓子は、添加物を使えば日持ちもしますし柔らかさも持続しますが、うさぎやは「御菓子本来の味」を求めていますのでなるべく添加物は使用しないように心掛けています。お餅は翌日に硬くなるのが自然です。ですからうさぎやのお餅は当日中に召し上がっていただきたいのです。
                </p>
            </div>
        </div>

        <div class="scroll-indicator scroll-to-top with-arrow" data-target="section-0">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
        </div>
    </section>
</div>

<script>
    (function() {
        'use strict';

        let isInitialized = false;

        function initializeSpiritPage() {
            // 初期化済みチェック
            const container = document.querySelector('.spirit-container');
            if (!container) {
                console.warn('Spirit container not found');
                return;
            }

            if (container.dataset.initialized === 'true') {
                console.log('Spirit page already initialized, skipping');
                return;
            }

            console.log('Initializing spirit page...');

            // スクロールアニメーション用のIntersection Observer
            const observerOptions = {
                root: null,
                rootMargin: '-10% 0px -10% 0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // サブタイトルとテキストにvisibleクラスを追加
                        const subtitle = entry.target.querySelector('.subtitle');
                        const textContent = entry.target.querySelector('.text-content');

                        if (subtitle) {
                            setTimeout(() => {
                                subtitle.classList.add('visible');
                            }, 100);
                        }

                        if (textContent) {
                            setTimeout(() => {
                                textContent.classList.add('visible');
                            }, subtitle ? 300 : 100);
                        }
                    }
                });
            }, observerOptions);

            // 各セクションを監視
            const sections = document.querySelectorAll('.image-section');
            sections.forEach(section => observer.observe(section));

            // スクロールインジケーターのクリック処理
            const scrollIndicators = document.querySelectorAll('.scroll-indicator');
            scrollIndicators.forEach(indicator => {
                // 既に初期化済みかチェック
                if (indicator.dataset.clickInitialized === 'true') {
                    return;
                }

                indicator.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('data-target');
                    if (targetId) {
                        const targetSection = document.getElementById(targetId);
                        if (targetSection) {
                            targetSection.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    }
                });

                // ホバーエフェクト
                indicator.style.cursor = 'pointer';

                indicator.addEventListener('mouseenter', function() {
                    this.style.opacity = '0.8';
                });

                indicator.addEventListener('mouseleave', function() {
                    this.style.opacity = '1';
                });

                // 初期化済みフラグ
                indicator.dataset.clickInitialized = 'true';
            });

            // コンテナに初期化済みフラグを設定
            container.dataset.initialized = 'true';
            isInitialized = true;

            console.log('Spirit page initialized successfully');
        }

        // Turbo対応の初期化
        document.addEventListener('turbo:load', function() {
            console.log('turbo:load - initializing spirit page');
            initializeSpiritPage();
        });

        // 初回読み込み
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeSpiritPage);
        } else {
            initializeSpiritPage();
        }

        console.log('Spirit page script loaded');
    })();
</script>