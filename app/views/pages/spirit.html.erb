<%= render 'shared/header' %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        overflow-x: hidden;
    }

    .spirit-container {
        width: 100%;
        min-height: 100vh;
    }

    /* ============================================
       タイトルセクション
       ============================================ */
    .title-section {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #eee;
        position: relative;
        padding-top: 100px;
    }

    .logo-image {
        max-width: 600px;
        width: 80%;
        height: auto;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ============================================
       画像セクション
       ============================================ */
    .image-section {
        width: 100%;
        height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .background-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        z-index: 2;
    }

    .content-wrapper {
        position: relative;
        z-index: 3;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10rem 3rem 6rem 3rem;
    }

    .image-section:last-of-type .content-wrapper {
        padding-top: 16rem;
    }

    /* 最後のセクションのサブタイトルに追加マージン */
    .image-section:last-of-type .subtitle {
        margin-top: 2rem;
    }

    /* ============================================
       サブタイトル
       ============================================ */
    .subtitle {
        align-self: flex-start;
        text-align: left;
        max-width: 600px;
        opacity: 0;
        transform: translateX(-30px);
        transition: opacity 1s ease-out, transform 1s ease-out;
    }

    .subtitle.visible {
        opacity: 1;
        transform: translateX(0);
    }

    .subtitle h2 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffffff;
        -webkit-text-stroke: 1.5px #000;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
        line-height: 3.5;
        margin-bottom: 1rem;
    }

    @keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* ============================================
       テキスト
       ============================================ */
    .text-content {
        align-self: flex-end;
        max-width: 700px;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 1s ease-out 0.3s, transform 1s ease-out 0.3s;
    }

    .text-content.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .text-content p {
        font-size: 19px;
        color: #ffffff;
        line-height: 1.5;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.9);
        background: rgba(0, 0, 0, 0.2);
        padding: 2rem;
        border-radius: 1rem;
        backdrop-filter: blur(5px);
    }

    /* ============================================
       スクロールインジケーター
       ============================================ */
    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        cursor: pointer;
    }

    .scroll-indicator.with-arrow {
        animation: bounce 2s infinite;
    }

    .image-section:last-of-type .scroll-indicator {
        top: 8rem;
        bottom: auto;
    }

    .scroll-indicator svg {
        width: 2rem;
        height: 2rem;
        color: #ffffff;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
        transition: all 0.3s ease;
    }

    .scroll-indicator.with-arrow:hover svg {
        transform: translateY(5px);
    }

    .scroll-progress {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border: 3px solid #F9F9F9;
        transition: all 0.3s ease;
    }

    .scroll-progress:hover {
        background: rgba(255, 255, 255, 0.5);
        transform: scale(1.1);
    }

    @keyframes bounce {

        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateX(-50%) translateY(0);
        }

        40% {
            transform: translateX(-50%) translateY(-10px);
        }

        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }

    /* ============================================
       レスポンシブ: 1024px
       ============================================ */
    @media (max-width: 1024px) {
        .logo-image {
            max-width: 500px;
        }

        .subtitle h2 {
            font-size: 2rem;
        }

        .text-content p {
            font-size: 1.125rem;
            padding: 1.5rem;
        }

        .content-wrapper {
            padding: 9rem 2rem 5rem 2rem;
        }

        .image-section:last-of-type .content-wrapper {
            padding-top: 15rem;
        }

        .image-section:last-of-type .subtitle {
            margin-top: 1.5rem;
        }

        .scroll-progress {
            width: 38px;
            height: 38px;
        }

        .image-section:last-of-type .scroll-indicator {
            top: 7rem;
        }
    }

    /* ============================================
       レスポンシブ: 768px
       ============================================ */
    @media (max-width: 768px) {
        .title-section {
            padding-top: 80px;
        }

        .logo-image {
            max-width: 400px;
        }

        .subtitle h2 {
            font-size: 1.75rem;
        }

        .text-content p {
            font-size: 1rem;
            padding: 1.25rem;
            line-height: 1.8;
        }

        .content-wrapper {
            padding: 8rem 1.5rem 5rem 1.5rem;
        }

        .image-section:last-of-type .content-wrapper {
            padding-top: 14rem;
        }

        .image-section:last-of-type .subtitle {
            margin-top: 1.5rem;
        }

        .subtitle,
        .text-content {
            max-width: 100%;
        }

        .scroll-progress {
            width: 35px;
            height: 35px;
        }

        .image-section:last-of-type .scroll-indicator {
            top: 6rem;
        }
    }

    /* ============================================
       レスポンシブ: 480px
       ============================================ */
    @media (max-width: 480px) {
        .title-section {
            padding-top: 60px;
        }

        .logo-image {
            max-width: 300px;
            width: 90%;
        }

        .subtitle h2 {
            font-size: 1.25rem;
        }

        .text-content p {
            font-size: 0.875rem;
            padding: 1rem;
            line-height: 1.7;
        }

        .content-wrapper {
            padding: 6rem 1rem 4rem 1rem;
        }

        .image-section:last-of-type .content-wrapper {
            padding-top: 12rem;
        }

        .image-section:last-of-type .subtitle {
            margin-top: 1rem;
        }

        .scroll-indicator svg {
            width: 1.5rem;
            height: 1.5rem;
        }

        .scroll-progress {
            width: 30px;
            height: 30px;
            border: 2px solid #F9F9F9;
        }

        .image-section:last-of-type .scroll-indicator {
            top: 5rem;
        }
    }
</style>

