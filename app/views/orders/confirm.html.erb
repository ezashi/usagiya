<%= render 'shared/header' %>

<div class="pt-24 pb-12">
    <div class="container mx-auto px-4 max-w-4xl">
        <!-- ページヘッダー -->
        <div class="mb-12 text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">ご注文内容確認</h1>
            <p class="text-gray-600 text-lg">内容をご確認の上、ご注文を確定してください</p>
        </div>

        <!-- ステップインジケーター -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
            <div class="flex items-center justify-between">
                <div class="flex-1 flex items-center">
                    <div class="w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="font-bold text-gray-800">入力</p>
                        <p class="text-xs text-gray-500">情報を入力</p>
                    </div>
                </div>
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <div class="flex-1 flex items-center justify-center">
                    <div class="w-10 h-10 bg-pink-600 text-white rounded-full flex items-center justify-center font-bold">2</div>
                    <div class="ml-3">
                        <p class="font-bold text-gray-800">確認</p>
                        <p class="text-xs text-gray-500">内容を確認</p>
                    </div>
                </div>
                <svg class="w-6 h-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <div class="flex-1 flex items-center justify-end">
                    <div class="w-10 h-10 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold">3</div>
                    <div class="ml-3">
                        <p class="font-bold text-gray-500">完了</p>
                        <p class="text-xs text-gray-400">注文完了</p>
                    </div>
                </div>
            </div>
        </div>

        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
        <!-- Hidden fields to preserve form data -->
        <%= f.hidden_field :customer_name %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :phone %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :same_address %>
        <% unless @order.same_address? %>
        <%= f.hidden_field :delivery_name %>
        <%= f.hidden_field :delivery_postal_code %>
        <%= f.hidden_field :delivery_address %>
        <%= f.hidden_field :delivery_phone %>
        <% end %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :delivery_date %>
        <%= f.hidden_field :delivery_time %>
        <%= f.hidden_field :wrapping_type %>
        <%= f.hidden_field :notes %>

        <%= f.fields_for :order_items do |item_fields| %>
        <%= item_fields.hidden_field :product_type %>
        <%= item_fields.hidden_field :quantity %>
        <% end %>

        <!-- ご注文者様情報 -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-pink-300 pb-2">ご注文者様情報</h2>
            <div class="space-y-3">
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">お名前</p>
                    <p class="col-span-2 text-gray-800"><%= @order.customer_name %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">郵便番号</p>
                    <p class="col-span-2 text-gray-800"><%= @order.postal_code %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">ご住所</p>
                    <p class="col-span-2 text-gray-800"><%= @order.address %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">電話番号</p>
                    <p class="col-span-2 text-gray-800"><%= @order.phone %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">E-MAIL</p>
                    <p class="col-span-2 text-gray-800"><%= @order.email %></p>
                </div>
            </div>
        </div>

        <!-- 配送先情報 -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-pink-300 pb-2">配送先情報</h2>
            <% if @order.same_address? %>
            <p class="text-gray-700">※ご注文者様と同じ住所に配送します</p>
            <% else %>
            <div class="space-y-3">
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">お名前</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_name %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">郵便番号</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_postal_code %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">ご住所</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_address %></p>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">電話番号</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_phone %></p>
                </div>
            </div>
            <% end %>
        </div>

        <!-- 注文商品 -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-pink-300 pb-2">ご注文内容</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-sm font-bold text-gray-700">商品名</th>
                            <th class="px-6 py-3 text-center text-sm font-bold text-gray-700">数量</th>
                            <th class="px-6 py-3 text-right text-sm font-bold text-gray-700">単価</th>
                            <th class="px-6 py-3 text-right text-sm font-bold text-gray-700">小計</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% @order.order_items.reject(&:marked_for_destruction?).each do |item| %>
                        <% next if item.quantity.to_i <= 0 %>
                        <tr>
                            <td class="px-6 py-4 text-gray-800"><%= Order::PRODUCT_PRICES[item.product_type][:name] %></td>
                            <td class="px-6 py-4 text-center text-gray-800"><%= item.quantity %>個</td>
                            <td class="px-6 py-4 text-right text-gray-800">¥<%= number_with_delimiter(Order::PRODUCT_PRICES[item.product_type][:price]) %></td>
                            <td class="px-6 py-4 text-right text-gray-800">¥<%= number_with_delimiter(Order::PRODUCT_PRICES[item.product_type][:price] * item.quantity) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-right font-bold text-gray-800">合計</td>
                            <td class="px-6 py-4 text-right font-bold text-pink-600 text-xl">¥<%= number_with_delimiter(@order.total_amount) %></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- お支払い・配送情報 -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-pink-300 pb-2">お支払い・配送情報</h2>
            <div class="space-y-3">
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">お支払い方法</p>
                    <p class="col-span-2 text-gray-800"><%= Order::PAYMENT_METHODS[@order.payment_method] %></p>
                </div>
                <% if @order.delivery_date.present? %>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">到着希望日</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_date.strftime("%Y年%m月%d日") %></p>
                </div>
                <% end %>
                <% if @order.delivery_time.present? %>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">希望到着時間</p>
                    <p class="col-span-2 text-gray-800"><%= @order.delivery_time %></p>
                </div>
                <% end %>
                <div class="grid grid-cols-3 gap-4">
                    <p class="text-gray-600 font-bold">包装</p>
                    <p class="col-span-2 text-gray-800"><%= Order::WRAPPING_OPTIONS[@order.wrapping_type] %></p>
                </div>
            </div>
        </div>

        <!-- ご希望欄 -->
        <% if @order.notes.present? %>
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-pink-300 pb-2">ご希望欄</h2>
            <p class="text-gray-800 whitespace-pre-wrap"><%= @order.notes %></p>
        </div>
        <% end %>

        <!-- ボタン -->
        <div class="flex gap-4 justify-center mt-8">
            <%= link_to "← 入力内容を修正する", new_order_path, class: "inline-block px-8 py-3 bg-gray-200 text-gray-800 font-bold rounded-lg hover:bg-gray-300 transition-colors" %>
            <%= f.submit "注文を確定する", class: "inline-block px-12 py-3 bg-pink-600 text-white font-bold text-lg rounded-lg hover:bg-pink-700 transition-colors cursor-pointer shadow-lg", data: { confirm: "この内容でご注文を確定してもよろしいですか?" } %>
        </div>
        <% end %>
    </div>
</div>