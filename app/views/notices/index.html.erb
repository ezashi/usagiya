<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">お知らせ</h1>

    <div class="space-y-6">
        <% @notices.each do |notice| %>
        <a href="<%= notice_path(notice) %>" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
            <div class="flex justify-between items-start mb-3">
                <h2 class="text-xl font-semibold text-gray-800"><%= notice.title %></h2>
                <span class="text-sm text-gray-500"><%= notice.published_at.strftime('%Y年%m月%d日') %></span>
            </div>
            <div class="text-gray-600 line-clamp-2">
                <%= strip_tags(notice.content.to_s) %>
            </div>
        </a>
        <% end %>
    </div>

    <div class="mt-8">
        <a href="<%= root_path %>" class="text-pink-600 hover:underline">← トップに戻る</a>
    </div>
</div>