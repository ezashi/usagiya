<%= render 'shared/header' %>

<style>
    /* ============================================
       コンテナとレイアウト
       ============================================ */
    .notices-container {
        min-height: 100vh;
        background: linear-gradient(to bottom, #fce7f3, #ffffff);
        padding-top: 140px;
        padding-bottom: 4rem;
    }

    .notices-content {
        max-width: 80rem;
        margin: 0 auto;
    }

    /* ============================================
       トップへ戻るボタン
       ============================================ */
    .back-to-top-button {
        position: fixed;
        left: 1rem;
        top: 80px;
        z-index: 40;
        display: flex;
        align-items: center;
        background-color: #db2777;
        color: white;
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: 0.75rem;
        transition: all 0.3s;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        font-size: 0.875rem;
    }

    .back-to-top-button:hover {
        background-color: #be185d;
        transform: scale(1.05);
    }

    .back-icon {
        width: 1rem;
        height: 1rem;
        margin-right: 0.25rem;
    }

    .back-text-full {
        display: none;
    }

    .back-text-short {
        display: inline;
    }

    /* ============================================
       ヘッダー
       ============================================ */
    .notices-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .notices-title {
        font-size: 1.875rem;
        font-weight: bold;
        color: #1f2937;
        margin-bottom: 0.75rem;
    }

    .notices-subtitle {
        font-size: 0.875rem;
        color: #4b5563;
    }

    /* ============================================
       検索・フィルター
       ============================================ */
    .search-filter-container {
        background: white;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .search-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .search-row {
        display: flex;
        gap: 0.5rem;
    }

    .keyword-field {
        flex: 1;
    }

    .search-button-wrapper {
        flex-shrink: 0;
        display: flex;
        align-items: flex-end;
    }

    .filter-row {
        display: flex;
        gap: 0.5rem;
    }

    .filter-fields {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    .filter-field {
        min-width: 0;
    }

    .reset-button-wrapper {
        flex-shrink: 0;
        display: flex;
        align-items: flex-end;
    }

    .field-label {
        display: block;
        font-size: 0.75rem;
        font-weight: bold;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .text-input,
    .select-input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        transition: all 0.3s;
        outline: none;
    }

    .text-input:focus,
    .select-input:focus {
        border-color: #ec4899;
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
    }

    .search-button,
    .reset-button,
    .no-notices-button {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: bold;
        font-size: 0.875rem;
        transition: all 0.3s;
        cursor: pointer;
        border: none;
        white-space: nowrap;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

    .search-button {
        background-color: #db2777;
        color: white;
    }

    .search-button:hover {
        background-color: #be185d;
    }

    .reset-button {
        background-color: #e5e7eb;
        color: #374151;
    }

    .reset-button:hover {
        background-color: #d1d5db;
    }

    /* ============================================
       お知らせリスト
       ============================================ */
    .notices-list-wrapper {
        display: flex;
        justify-content: center;
    }

    .notices-list {
        width: 100%;
        max-width: 64rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .notice-card {
        background: white;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        overflow: hidden;
    }

    .notice-card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .notice-card-content {
        padding: 1rem;
    }

    .notice-header {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .notice-title-wrapper {
        flex: 1;
        order: 2;
    }

    .notice-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #1f2937;
    }

    .notice-meta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-shrink: 0;
        order: 1;
    }

    .notice-date {
        display: flex;
        align-items: center;
        color: #db2777;
        font-weight: bold;
        font-size: 0.875rem;
    }

    .date-icon {
        width: 1rem;
        height: 1rem;
        margin-right: 0.25rem;
    }

    .new-badge {
        background-color: #ef4444;
        color: white;
        font-size: 0.75rem;
        font-weight: bold;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
    }

    .notice-divider {
        height: 0.125rem;
        background: linear-gradient(to right, #ec4899, #db2777);
        margin-bottom: 1rem;
        border-radius: 9999px;
    }

    .notice-content {
        color: #374151;
        line-height: 1.8;
    }

    /* ============================================
       お知らせなし
       ============================================ */
    .no-notices {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        text-align: center;
        max-width: 42rem;
        margin: 0 auto;
    }

    .no-notices-icon {
        width: 4rem;
        height: 4rem;
        margin: 0 auto 1rem;
        color: #d1d5db;
    }

    .no-notices-title {
        font-size: 1.125rem;
        color: #6b7280;
        margin-bottom: 0.75rem;
    }

    .no-notices-text {
        font-size: 0.875rem;
        color: #9ca3af;
        margin-bottom: 1rem;
    }

    .no-notices-button {
        background-color: #db2777;
        color: white;
        padding: 0.5rem 1.5rem;
    }

    .no-notices-button:hover {
        background-color: #be185d;
    }

    /* ============================================
       Proseスタイル（リッチテキスト）
       ============================================ */
    .prose h1,
    .prose h2,
    .prose h3 {
        color: #111827;
        font-weight: bold;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .prose h1 {
        font-size: 1.75rem;
        border-bottom: 3px solid #ec4899;
        padding-bottom: 0.5rem;
    }

    .prose h2 {
        font-size: 1.25rem;
    }

    .prose h3 {
        font-size: 1.125rem;
    }

    .prose p {
        margin-bottom: 1rem;
    }

    .prose strong {
        color: #ec4899;
        font-weight: 700;
    }

    .prose a {
        color: #ec4899;
        text-decoration: underline;
        transition: color 0.3s;
    }

    .prose a:hover {
        color: #db2777;
    }

    .prose img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin: 1.5rem auto;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .prose ul,
    .prose ol {
        margin-left: 1.25rem;
        margin-bottom: 1rem;
    }

    .prose li {
        margin-bottom: 0.375rem;
    }

    .prose blockquote {
        border-left: 4px solid #ec4899;
        padding-left: 1rem;
        margin-left: 0;
        font-style: italic;
        color: #6b7280;
    }

    .prose code {
        background-color: #f3f4f6;
        padding: 0.15rem 0.3rem;
        border-radius: 0.25rem;
        font-family: 'Courier New', monospace;
        font-size: 0.875em;
    }

    .prose pre {
        background-color: #1f2937;
        color: #f9fafb;
        padding: 0.75rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-bottom: 1rem;
    }

    .prose pre code {
        background: none;
        padding: 0;
        color: inherit;
    }

    .prose hr {
        border: none;
        border-top: 2px solid #e5e7eb;
        margin: 1.5rem 0;
    }

    /* ============================================
       レスポンシブ: 640px以上
       ============================================ */
    @media (min-width: 640px) {
        .back-to-top-button {
            left: 1.5rem;
            top: 150px;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }

        .back-icon {
            width: 1.25rem;
            height: 1.25rem;
            margin-right: 0.5rem;
        }

        .back-text-full {
            display: inline;
        }

        .back-text-short {
            display: none;
        }

        .notices-header {
            margin-bottom: 2rem;
        }

        .notices-title {
            font-size: 2.25rem;
            margin-bottom: 1rem;
        }

        .notices-subtitle {
            font-size: 1rem;
        }

        .search-filter-container {
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .search-row,
        .filter-row {
            gap: 0.75rem;
        }

        .filter-fields {
            gap: 0.75rem;
        }

        .field-label {
            font-size: 0.875rem;
        }

        .text-input,
        .select-input {
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }

        .search-button,
        .reset-button {
            padding: 0.5rem 1.5rem;
            font-size: 1rem;
        }

        .notices-list {
            gap: 1.5rem;
        }

        .notice-card-content {
            padding: 1.5rem;
        }

        .notice-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: start;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .notice-title-wrapper {
            order: 1;
        }

        .notice-title {
            font-size: 1.5rem;
        }

        .notice-meta {
            flex-direction: column;
            align-items: flex-end;
            order: 2;
        }

        .notice-date {
            font-size: 1rem;
        }

        .date-icon {
            width: 1.25rem;
            height: 1.25rem;
            margin-right: 0.5rem;
        }

        .new-badge {
            padding: 0.25rem 0.75rem;
        }

        .notice-divider {
            height: 0.25rem;
            margin-bottom: 1.5rem;
        }

        .prose h1 {
            font-size: 2rem;
        }

        .prose h2 {
            font-size: 1.5rem;
        }

        .prose h3 {
            font-size: 1.25rem;
        }

        .prose p {
            margin-bottom: 1.5rem;
        }

        .prose img {
            border-radius: 0.75rem;
            margin: 2rem auto;
        }

        .prose ul,
        .prose ol {
            margin-left: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .prose li {
            margin-bottom: 0.5rem;
        }

        .prose blockquote {
            padding-left: 1.5rem;
        }

        .prose code {
            padding: 0.2rem 0.4rem;
            font-size: 0.9em;
        }

        .prose pre {
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .prose hr {
            margin: 2rem 0;
        }

        .no-notices {
            padding: 3rem;
        }

        .no-notices-icon {
            width: 6rem;
            height: 6rem;
            margin-bottom: 1.5rem;
        }

        .no-notices-title {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .no-notices-text {
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .no-notices-button {
            padding: 0.75rem 1.5rem;
        }
    }

    /* ============================================
       レスポンシブ: 768px以上
       ============================================ */
    @media (min-width: 768px) {
        .back-to-top-button {
            left: 2rem;
            top: 150px;
        }

        .notices-title {
            font-size: 3rem;
        }

        .notice-title {
            font-size: 1.875rem;
        }

        .notice-date {
            font-size: 1.125rem;
        }
    }

    /* ============================================
       レスポンシブ: 1024px以上
       ============================================ */
    @media (min-width: 1024px) {
        .notices-content {
            max-width: 80rem;
        }

        .notices-list {
            max-width: 64rem;
        }
    }

    /* ============================================
       レスポンシブ: 1280px以上
       ============================================ */
    @media (min-width: 1280px) {
        .notices-content {
            max-width: 90rem;
        }

        .notices-list {
            max-width: 72rem;
        }
    }

    /* ============================================
       レスポンシブ: 1440px以上
       ============================================ */
    @media (min-width: 1440px) {
        .notices-content {
            max-width: 100rem;
        }

        .notices-list {
            max-width: 80rem;
        }
    }
</style>

<div class="notices-container">
    <div class="container mx-auto px-4">
        <!-- 左上固定:トップページに戻るボタン -->
        <%= link_to root_path, class: "back-to-top-button" do %>
        <svg class="back-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span class="back-text-full">トップへ</span>
        <span class="back-text-short">←</span>
        <% end %>

        <div class="notices-content">
            <!-- タイトル（中央配置） -->
            <div class="notices-header">
                <h1 class="notices-title">お知らせ</h1>
                <p class="notices-subtitle">うさぎやからの最新情報をお届けします</p>
            </div>

            <!-- 検索・フィルター機能 -->
            <div class="search-filter-container">
                <%= form_with url: notices_path, method: :get, local: true, id: "search-form", class: "search-form" do |f| %>

                <!-- キーワード検索 + 検索ボタン -->
                <div class="search-row">
                    <div class="keyword-field">
                        <label class="field-label">キーワード検索</label>
                        <%= f.text_field :keyword, 
                          value: params[:keyword],
                          placeholder: "タイトルや本文で検索", 
                          class: "text-input" %>
                    </div>
                    <div class="search-button-wrapper">
                        <%= f.submit "検索", class: "search-button" %>
                    </div>
                </div>

                <!-- フィルター + リセットボタン -->
                <div class="filter-row">
                    <div class="filter-fields">
                        <!-- 年フィルター -->
                        <div class="filter-field">
                            <label class="field-label">年</label>
                            <%= f.select :year, 
                              options_for_select(
                                [['すべて', '']] + (2020..Date.current.year).to_a.reverse.map { |y| [y, y] },
                                params[:year]
                              ),
                              {},
                              class: "select-input auto-submit" %>
                        </div>

                        <!-- 月フィルター -->
                        <div class="filter-field">
                            <label class="field-label">月</label>
                            <%= f.select :month, 
                              options_for_select(
                                [['すべて', '']] + (1..12).map { |m| ["#{m}月", m] },
                                params[:month]
                              ),
                              {},
                              class: "select-input auto-submit" %>
                        </div>
                    </div>

                    <div class="reset-button-wrapper">
                        <%= link_to "リセット", notices_path, class: "reset-button" %>
                    </div>
                </div>

                <% end %>
            </div>

            <% if @notices.any? %>
            <!-- お知らせカード（中央配置） -->
            <div class="notices-list-wrapper">
                <div class="notices-list">
                    <% @notices.each do |notice| %>
                    <article class="notice-card">
                        <div class="notice-card-content">
                            <!-- 上部: タイトル（左）と日付（右） -->
                            <div class="notice-header">
                                <!-- タイトル（左上） -->
                                <div class="notice-title-wrapper">
                                    <h2 class="notice-title">
                                        <%= notice.title %>
                                    </h2>
                                </div>

                                <!-- 日付とNEWバッジ（右上） -->
                                <div class="notice-meta">
                                    <time datetime="<%= notice.published_at.iso8601 %>" class="notice-date">
                                        <svg class="date-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <%= notice.published_at.strftime('%Y年%m月%d日') %>
                                    </time>

                                    <% if notice.published_at > 7.days.ago %>
                                    <span class="new-badge">NEW</span>
                                    <% end %>
                                </div>
                            </div>

                            <!-- 区切り線 -->
                            <div class="notice-divider"></div>

                            <!-- 本文（全文表示） -->
                            <div class="notice-content prose">
                                <%= notice.content %>
                            </div>
                        </div>
                    </article>
                    <% end %>
                </div>
            </div>

            <% else %>
            <!-- お知らせがない場合 -->
            <div class="no-notices">
                <svg class="no-notices-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
                <% if params[:keyword].present? || params[:year].present? || params[:month].present? %>
                <p class="no-notices-title">検索条件に一致するお知らせが見つかりませんでした</p>
                <p class="no-notices-text">別の条件で検索してください</p>
                <%= link_to "検索をリセット", notices_path, class: "no-notices-button" %>
                <% else %>
                <p class="no-notices-title">現在、お知らせはありません</p>
                <p class="no-notices-text">新しいお知らせが追加されるまでお待ちください</p>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>

<!-- JavaScriptで自動サブミット -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const autoSubmitElements = document.querySelectorAll('.auto-submit');

        autoSubmitElements.forEach(function(element) {
            element.addEventListener('change', function() {
                document.getElementById('search-form').submit();
            });
        });
    });

    document.addEventListener('turbo:load', function() {
        const autoSubmitElements = document.querySelectorAll('.auto-submit');

        autoSubmitElements.forEach(function(element) {
            element.addEventListener('change', function() {
                document.getElementById('search-form').submit();
            });
        });
    });
</script>