<div class="w-full max-w-4xl mx-auto">
    <div class="mb-6">
        <%= link_to "← お知らせ一覧に戻る", notices_path, class: "text-blue-600 hover:text-blue-900" %>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
        <p class="text-sm text-gray-500 mb-4"><%= @notice.published_at.strftime("%Y年%m月%d日") %></p>
        <h1 class="text-3xl font-bold mb-6"><%= @notice.title %></h1>
        <div class="prose max-w-none">
            <%= simple_format(@notice.content, class: "text-gray-700 leading-relaxed") %>
        </div>
    </div>
</div>