<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
            <div class="mb-4">
                <span class="text-sm text-gray-500"><%= @notice.published_at.strftime('%Y年%m月%d日') %></span>
            </div>

            <h1 class="text-3xl font-bold mb-6"><%= @notice.title %></h1>

            <div class="prose max-w-none">
                <%= @notice.content %>
            </div>
        </div>

        <div class="mt-8">
            <a href="<%= notices_path %>" class="text-pink-600 hover:underline">← お知らせ一覧に戻る</a>
        </div>
    </div>
</div>