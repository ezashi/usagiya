        <li><%= link_to "冷凍もちパイの発送", "#delivery" %></li>
        <li><%= link_to "さとふる", "https://www.satofull.jp/products/list.php?s4=18&q=%E3%81%86%E3%81%95%E3%81%8E%E3%82%84&cnt=60&p=1", target: "_blank" %></li>
        <li><%= link_to "お知らせ", notices_path %></li>
        <li><%= link_to "営業カレンダー", "#calendar" %></li>
        <li><%= link_to "LINE", "https://page.line.me/296kbwry?openQrModal=true", target: "_blank" %></li>
        <li><%= link_to "Instagram", "https://www.instagram.com/usagiya.fukui/?hl=ja", target: "_blank" %></li>
        <li><%= link_to "お問い合わせ", new_inquiry_path %></li>
    </ul>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const hamburger = document.getElementById('hamburger-featured');
        const sideMenu = document.getElementById('sideMenu-featured');
        const overlay = document.getElementById('overlay-featured');
        const closeMenu = document.getElementById('closeMenu-featured');

        if (hamburger && sideMenu && overlay && closeMenu) {
            hamburger.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '0';
                overlay.style.display = 'block';
            });

            closeMenu.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '-300px';
                overlay.style.display = 'none';
            });

            overlay.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '-300px';
                overlay.style.display = 'none';
            });
        }
    });
</script>