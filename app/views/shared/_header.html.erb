<header style="position: fixed; top: 0; left: 0; width: 100%; z-index: 1000; display: flex; justify-content: space-between; align-items: center; padding: 30px 40px; background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 100%);">
    <div class="logo" style="display: flex; align-items: center;">
        <%= link_to root_path, style: "display: block; line-height: 0;" do %>
        <%= image_tag 'usagiya.png', alt: '御菓子処うさぎや', style: "height: 50px; width: auto; object-fit: contain; filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5));" %>
        <% end %>
    </div>
    <nav style="display: flex; gap: 30px; align-items: center;">
        <%= link_to "ホーム", root_path, style: "text-decoration: none; color: white; font-weight: 500; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); white-space: nowrap;" %>
        <%= link_to "おすすめ商品", featured_products_path, style: "text-decoration: none; color: white; font-weight: 500; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); white-space: nowrap;" %>
        <%= link_to "季節限定商品", seasonal_products_path, style: "text-decoration: none; color: white; font-weight: 500; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); white-space: nowrap;" %>
        <%= link_to "お知らせ", notices_path, style: "text-decoration: none; color: white; font-weight: 500; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); white-space: nowrap;" %>
        <%= link_to "お問い合わせ", new_inquiry_path, style: "text-decoration: none; color: white; font-weight: 500; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); white-space: nowrap;" %>
        <div class="hamburger" id="hamburger-featured" style="display: flex; flex-direction: column; cursor: pointer; gap: 8px; padding: 10px; margin-left: 20px;">
            <span style="width: 30px; height: 3px; background: white; border-radius: 2px; box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);"></span>
            <span style="width: 30px; height: 3px; background: white; border-radius: 2px; box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);"></span>
        </div>
    </nav>
</header>

<!-- サイドメニュー -->
<div class="overlay-featured" id="overlay-featured" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 1999;"></div>

<div class="side-menu-featured" id="sideMenu-featured" style="position: fixed; top: 0; right: -300px; width: 300px; height: 100%; background: white; box-shadow: -2px 0 5px rgba(0, 0, 0, 0.3); transition: right 0.3s; z-index: 2000; overflow-y: auto;">
    <div class="side-menu-close" id="closeMenu-featured" style="text-align: right; font-size: 2rem; padding: 20px; cursor: pointer; color: #d4006a;">&times;</div>
    <ul style="list-style: none; padding: 20px;">
        <li style="margin: 20px 0;"><%= link_to "ホーム", root_path, style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "御菓子処うさぎやの想い", "#philosophy", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "おすすめ商品", featured_products_path, style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "季節限定商品", seasonal_products_path, style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "冷凍もちパイの発送", "#delivery", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "さとふる", "https://www.satofull.jp/products/list.php?s4=18&q=%E3%81%86%E3%81%95%E3%81%8E%E3%82%84&cnt=60&p=1", target: "_blank", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "お知らせ", notices_path, style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "営業カレンダー", "#calendar", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "LINE", "https://page.line.me/296kbwry?openQrModal=true", target: "_blank", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "Instagram", "https://www.instagram.com/usagiya.fukui/?hl=ja", target: "_blank", style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
        <li style="margin: 20px 0;"><%= link_to "お問い合わせ", new_inquiry_path, style: "text-decoration: none; color: #333; font-size: 1.1rem; display: block; padding: 10px;" %></li>
    </ul>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const hamburger = document.getElementById('hamburger-featured');
        const sideMenu = document.getElementById('sideMenu-featured');
        const overlay = document.getElementById('overlay-featured');
        const closeMenu = document.getElementById('closeMenu-featured');

        if (hamburger && sideMenu && overlay && closeMenu) {
            hamburger.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '0';
                overlay.style.display = 'block';
            });

            closeMenu.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '-300px';
                overlay.style.display = 'none';
            });

            overlay.addEventListener('click', function(e) {
                e.preventDefault();
                sideMenu.style.right = '-300px';
                overlay.style.display = 'none';
            });
        }
    });
</script>