<!-- オーバーレイ -->
<div class="overlay-featured" id="overlay-featured"></div>

<!-- サイドメニュー -->
<div class="side-menu-featured" id="sideMenu-featured">
    <div class="side-menu-close" id="closeMenu-featured">&times;</div>
    <ul class="side-menu-links">
        <li><%= link_to "ホーム", root_path %></li>
