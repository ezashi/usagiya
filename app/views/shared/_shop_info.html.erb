<style>
    /* 店舗情報セクション - 背景画像バージョン */
    .shop-info-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .shop-info-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/shop/shop_background.png');
        background-size: cover;
        background-position: center;
        z-index: 1;
    }

    .shop-info-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        /* 半透明の黒オーバーレイ */
        z-index: 2;
    }

    .shop-info {
        position: relative;
        z-index: 3;
        background: rgba(255, 255, 255, 0.95);
        /* 半透明の白背景 */
        padding: 60px 40px;
        margin: 40px auto;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        max-width: 1200px;
        width: calc(100% - 80px);
        box-sizing: border-box;
    }

    .shop-info h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 40px;
        color: #EE827C;
    }

    .info-grid-new {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        max-width: 1000px;
        margin: 0 auto;
        align-items: center;
    }

    .info-column {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .info-section h3 {
        font-size: 1.2rem;
        color: #EE827C;
        margin-bottom: 10px;
        border-bottom: 2px solid #EE827C;
        padding-bottom: 5px;
        text-align: center;
    }

    .info-section p {
        margin: 5px 0;
        line-height: 1.8;
        color: #333;
        text-align: center;
    }

    .info-section a {
        color: #333;
        text-decoration: none;
        transition: color 0.3s;
    }

    .info-section a:hover {
        color: #EE827C;
    }

    .postal-code {
        font-size: 0.95rem;
        color: #666;
    }

    .address {
        font-size: 1.05rem;
        font-weight: 500;
    }

    .map-link {
        color: #EE827C !important;
        text-decoration: underline !important;
    }

    .sns-links {
        display: flex;
        gap: 15px;
        margin-top: 10px;
        justify-content: center;
    }

    .sns-icon-img {
        display: block;
        transition: opacity 0.3s;
    }

    .sns-icon-img:hover {
        opacity: 0.7;
    }

    .sns-image {
        width: 50px;
        height: 50px;
        object-fit: contain;
    }

    /* レスポンシブ対応 */
    @media (max-width: 768px) {
        .shop-info-section {
            min-height: auto;
        }

        .info-grid-new {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .shop-info {
            padding: 40px 20px;
            width: calc(100% - 40px);
            margin: 20px auto;
        }

        .shop-info h2 {
            font-size: 1.5rem;
        }

        .info-section h3 {
            font-size: 1.1rem;
        }

        .info-section p {
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        .shop-info {
            padding: 30px 15px;
            width: calc(100% - 30px);
        }

        .shop-info h2 {
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        .info-section h3 {
            font-size: 1rem;
        }

        .info-section p {
            font-size: 0.9rem;
        }

        .sns-image {
            width: 40px;
            height: 40px;
        }
    }
</style>

<!-- 店舗情報セクション -->
<section class="shop-info-section">
    <div class="shop-info-background" style="background-image: url('<%= image_path('shop/shop_background.png') %>');"></div>
    <div class="shop-info-overlay"></div>

    <div class="shop-info">
        <h2>店舗情報</h2>
        <div class="info-grid-new">
            <div class="info-column">
                <div class="info-section">
                    <h3>住所</h3>
                    <p class="postal-code">〒916-0071</p>
                    <p class="address">福井県鯖江市持明寺町5-10-1</p>
                </div>

                <div class="info-section">
                    <h3>アクセス</h3>
                    <p>
                        <%= link_to "Googleマップで見る", "https://maps.google.com/?q=福井県鯖江市持明寺町5-10-1", target: "_blank", class: "map-link" %>
                    </p>
                </div>

                <div class="info-section">
                    <h3>駐車場</h3>
                    <p>店舗前に駐車スペースあり</p>
                </div>
            </div>

            <div class="info-column">
                <div class="info-section">
                    <h3>営業時間</h3>
                    <p>平日・土曜日: 9:00〜18:00</p>
                    <p>定休日: 日曜日</p>
                    <p style="font-size: 0.9rem; color: #666;">(月曜日に不定休あり)</p>
                </div>

                <div class="info-section">
                    <h3>お問い合わせ</h3>
                    <p><%= link_to "0778-62-0861", "tel:0778-62-0861" %></p>
                    <p>
                        <%= link_to "お問い合わせフォーム", new_inquiry_path, style: "color: #EE827C; text-decoration: underline;" %>
                    </p>
                </div>

                <div class="info-section">
                    <h3>SNS</h3>
                    <div class="sns-links">
                        <%= link_to 'https://page.line.me/296kbwry?openQrModal=true', target: '_blank', class: 'sns-icon-img' do %>
                        <%= image_tag 'shop/line.png', alt: 'LINE', class: 'sns-image' %>
                        <% end %>
                        <%= link_to 'https://www.instagram.com/usagiya.fukui/?hl=ja', target: '_blank', class: 'sns-icon-img' do %>
                        <%= image_tag 'shop/instagram.png', alt: 'Instagram', class: 'sns-image' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>