<div class="w-full max-w-6xl mx-auto">
    <div class="mb-6">
        <%= link_to "← 商品一覧に戻る", products_path, class: "text-blue-600 hover:text-blue-900" %>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="md:flex">
            <div class="md:w-1/2">
                <% if @product.image.attached? %>
                <%= image_tag @product.image, class: "w-full h-auto" %>
                <% else %>
                <div class="w-full h-96 bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400 text-xl">No Image</span>
                </div>
                <% end %>
            </div>

            <div class="md:w-1/2 p-8">
                <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
                <p class="text-4xl font-bold text-red-600 mb-6">¥<%= number_with_delimiter(@product.price) %></p>

                <div class="mb-8">
                    <h2 class="text-xl font-bold mb-3">商品説明</h2>
                    <p class="text-gray-700 whitespace-pre-wrap leading-relaxed"><%= @product.description %></p>
                </div>

                <div class="space-y-4">
                    <%= link_to "冷凍もちパイを注文する", new_order_path, class: "block w-full bg-red-600 hover:bg-red-700 text-white text-center font-bold py-4 px-6 rounded-lg transition-colors duration-200" %>
                    <%= link_to "お問い合わせ", new_inquiry_path, class: "block w-full bg-gray-600 hover:bg-gray-700 text-white text-center font-bold py-4 px-6 rounded-lg transition-colors duration-200" %>
                </div>
            </div>
        </div>
    </div>
</div>