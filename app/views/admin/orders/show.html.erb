<div class="mb-6">
    <%= link_to "← 注文一覧に戻る", admin_orders_path, class: "text-blue-600 hover:text-blue-900" %>
</div>

<h1 class="text-3xl font-bold mb-6">注文詳細</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">注文情報</h2>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <p class="text-gray-700 font-bold">注文日時</p>
            <p><%= @order.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
        </div>
        <div>
            <p class="text-gray-700 font-bold">注文番号</p>
            <p>#<%= @order.id %></p>
        </div>
    </div>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">注文者情報</h2>
    <div class="space-y-2">
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">お名前</p>
            <p class="col-span-3"><%= @order.customer_name %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">郵便番号</p>
            <p class="col-span-3"><%= @order.postal_code %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">住所</p>
            <p class="col-span-3"><%= @order.address %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">電話番号</p>
            <p class="col-span-3"><%= @order.phone %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">メールアドレス</p>
            <p class="col-span-3"><%= @order.email %></p>
        </div>
    </div>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">注文内容</h2>
    <table class="min-w-full">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">商品名</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">数量</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">単価</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">小計</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            <% @order.order_items.each do |item| %>
            <tr>
                <td class="px-6 py-4"><%= item.product_name %></td>
                <td class="px-6 py-4"><%= item.quantity %>個</td>
                <td class="px-6 py-4">¥<%= number_with_delimiter(item.unit_price || item.price_per_unit) %></td>
                <td class="px-6 py-4">¥<%= number_with_delimiter(item.subtotal) %></td>
            </tr>
            <% end %>
        </tbody>
        <tfoot class="bg-gray-100">
            <tr>
                <td colspan="3" class="px-6 py-4 text-right font-bold">合計</td>
                <td class="px-6 py-4 font-bold">¥<%= number_with_delimiter(@order.total_amount) %></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">配送先情報</h2>
    <% if @order.same_address? %>
    <p class="text-gray-700">※注文者と同じ</p>
    <% else %>
    <div class="space-y-2">
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">お名前</p>
            <p class="col-span-3"><%= @order.delivery_name %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">郵便番号</p>
            <p class="col-span-3"><%= @order.delivery_postal_code %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">住所</p>
            <p class="col-span-3"><%= @order.delivery_address %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">電話番号</p>
            <p class="col-span-3"><%= @order.delivery_phone %></p>
        </div>
    </div>
    <% end %>

    <div class="mt-4 space-y-2">
        <% if @order.delivery_date.present? %>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">到着希望日</p>
            <p class="col-span-3"><%= @order.delivery_date.strftime("%Y年%m月%d日") %></p>
        </div>
        <% end %>

        <% if @order.delivery_time.present? %>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">希望到着時間</p>
            <p class="col-span-3"><%= @order.delivery_time %></p>
        </div>
        <% end %>
    </div>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">お支払い・その他</h2>
    <div class="space-y-2">
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">お支払い方法</p>
            <p class="col-span-3">
                <%= Order.payment_method_options.key(@order.payment_method) %>
            </p>
        </div>

        <% if @order.wrapping_type.present? %>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">包装</p>
            <p class="col-span-3"><%= @order.wrapping_type %></p>
        </div>
        <% end %>

        <% if @order.notes.present? %>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">ご希望欄</p>
            <p class="col-span-3 whitespace-pre-wrap"><%= @order.notes %></p>
        </div>
        <% end %>
    </div>
</div>