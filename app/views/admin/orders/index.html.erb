<h1 class="text-3xl font-bold mb-6">注文一覧</h1>

<div class="bg-white shadow-md rounded overflow-hidden">
    <table class="min-w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">注文日</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">注文者</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">商品</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">金額</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @orders.each do |order| %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= order.created_at.strftime("%Y年%m月%d日") %>
                </td>
                <td class="px-6 py-4">
                    <%= order.customer_name %>
                </td>
                <td class="px-6 py-4">
                    <%= order.order_items.sum(:quantity) %>個
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    ¥<%= number_with_delimiter(order.total_amount) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "詳細", admin_order_path(order), class: "text-blue-600 hover:text-blue-900" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="mt-6">
    <%= paginate @orders %>
</div>

<% if @orders.empty? %>
<p class="text-center text-gray-500 mt-8">注文がありません</p>
<% end %>