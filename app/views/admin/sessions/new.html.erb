<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="max-w-md w-full bg-white shadow-md rounded-lg px-8 pt-6 pb-8">
        <h1 class="text-2xl font-bold text-center mb-8">管理者ログイン</h1>

        <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
            <%= flash[:alert] %>
        </div>
        <% end %>

        <%= form_with url: admin_login_path, method: :post, local: true, html: { novalidate: true, class: "space-y-6" } do |f| %>
        <div>
            <%= label_tag :login_id, "管理者ユーザーID", class: "block text-gray-700 font-bold mb-2" %>
            <%= text_field_tag :login_id, params[:login_id], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true, autofocus: true %>
        </div>

        <div>
            <%= label_tag :password, "パスワード", class: "block text-gray-700 font-bold mb-2" %>
            <%= password_field_tag :password, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true, minlength: 7 %>
            <p class="text-xs text-gray-500 mt-1">※パスワードは7文字以上</p>
        </div>

        <div>
            <%= submit_tag "ログイン", class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        </div>
        <% end %>
    </div>
</div>