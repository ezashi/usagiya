<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">営業カレンダー管理</h1>
    <%= link_to "新規イベント追加", new_admin_calendar_event_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="bg-white shadow-md rounded p-4 mb-6">
    <div class="flex items-center space-x-4">
        <%= link_to admin_calendar_events_path(year: @year, month: @month - 1), class: "text-blue-600 hover:text-blue-900" do %>
        ← 前月
        <% end %>
        <h2 class="text-2xl font-bold"><%= @year %>年<%= @month %>月</h2>
        <%= link_to admin_calendar_events_path(year: @year, month: @month + 1), class: "text-blue-600 hover:text-blue-900" do %>
        次月 →
        <% end %>
    </div>
</div>

<div class="bg-white shadow-md rounded overflow-hidden">
    <table class="min-w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">日付</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">種類</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">説明</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">お知らせ自動投稿</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @calendar_events.each do |event| %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= event.event_date.strftime("%m月%d日（%a）") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-semibold rounded <%= event_type_badge_class(event.event_type) %>">
                        <%= CalendarEvent.event_type_options.key(event.event_type) %>
                    </span>
                </td>
                <td class="px-6 py-4">
                    <%= event.description&.truncate(50) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= event.auto_notice? ? "有効" : "無効" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "編集", edit_admin_calendar_event_path(event), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "削除", admin_calendar_event_path(event), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<% if @calendar_events.empty? %>
<p class="text-center text-gray-500 mt-8">この月のイベントが登録されていません</p>
<% end %>