<% content_for :page_title, "営業カレンダー管理" %>

<div class="space-y-6">
    <!-- ヘッダー -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">営業カレンダー管理</h1>
            <p class="text-gray-600 mt-1">営業日・休業日の管理</p>
        </div>
        <%= link_to new_admin_calendar_event_path, class: "inline-flex items-center justify-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        新規イベント追加
        <% end %>
    </div>

    <!-- カレンダーナビゲーション -->
    <div class="bg-white rounded-2xl shadow-md p-6">
        <div class="flex items-center justify-between">
            <%= link_to admin_calendar_events_path(year: @year, month: @month - 1), class: "flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            前月
            <% end %>

            <h2 class="text-2xl font-bold text-gray-800">
                <%= @year %>年<%= @month %>月
            </h2>

            <%= link_to admin_calendar_events_path(year: @year, month: @month + 1), class: "flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" do %>
            次月
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <% end %>
        </div>

        <!-- 今月に戻るボタン -->
        <% unless @year == Date.today.year && @month == Date.today.month %>
        <div class="mt-4 text-center">
            <%= link_to admin_calendar_events_path(year: Date.today.year, month: Date.today.month), class: "inline-flex items-center text-pink-600 hover:text-pink-700 font-medium transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            今月に戻る
            <% end %>
        </div>
        <% end %>
    </div>

    <!-- 凡例 -->
    <div class="bg-white rounded-2xl shadow-md p-6">
        <h3 class="font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
            イベント種類
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <span class="w-4 h-4 bg-gray-500 rounded mr-2"></span>
                <span class="text-sm font-medium text-gray-700">定休日</span>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <span class="w-4 h-4 bg-yellow-500 rounded mr-2"></span>
                <span class="text-sm font-medium text-gray-700">不定休</span>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <span class="w-4 h-4 bg-green-500 rounded mr-2"></span>
                <span class="text-sm font-medium text-gray-700">販売開始</span>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <span class="w-4 h-4 bg-orange-500 rounded mr-2"></span>
                <span class="text-sm font-medium text-gray-700">販売終了</span>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <span class="w-4 h-4 bg-blue-500 rounded mr-2"></span>
                <span class="text-sm font-medium text-gray-700">その他</span>
            </div>
        </div>
    </div>

    <% if @calendar_events.any? %>
    <!-- イベントリスト -->
    <div class="space-y-4">
        <% @calendar_events.group_by { |e| e.event_date.beginning_of_week }.each do |week_start, events| %>
        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
            <div class="bg-gray-100 px-6 py-3 border-b">
                <h3 class="font-bold text-gray-700">
                    <%= week_start.strftime("%m月%d日") %> 〜 <%= (week_start + 6.days).strftime("%m月%d日") %>の週
                </h3>
            </div>
            <div class="divide-y divide-gray-100">
                <% events.each do |event| %>
                <div class="p-6 hover:bg-gray-50 transition-colors">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <!-- イベント情報 -->
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-3">
                                <!-- 日付 -->
                                <div class="bg-pink-100 text-pink-700 px-4 py-2 rounded-lg">
                                    <div class="text-xs font-medium"><%= event.event_date.strftime("%Y") %></div>
                                    <div class="text-lg font-bold"><%= event.event_date.strftime("%m/%d") %></div>
                                    <div class="text-xs"><%= %w[日 月 火 水 木 金 土][event.event_date.wday] %>曜日</div>
                                </div>

                                <!-- イベント種類バッジ -->
                                <span class="px-4 py-2 text-sm font-bold rounded-lg <%= event_type_badge_class(event.event_type) %>">
                                    <%= CalendarEvent.event_type_options.key(event.event_type) %>
                                </span>

                                <!-- お知らせ自動投稿バッジ -->
                                <% if event.auto_notice? %>
                                <span class="px-3 py-1 text-xs font-bold bg-blue-100 text-blue-700 rounded-full flex items-center">
                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                                    </svg>
                                    自動投稿
                                </span>
                                <% end %>

                                <!-- 今日バッジ -->
                                <% if event.event_date == Date.today %>
                                <span class="px-3 py-1 text-xs font-bold bg-red-500 text-white rounded-full animate-pulse">
                                    今日
                                </span>
                                <% end %>
                            </div>

                            <% if event.description.present? %>
                            <p class="text-gray-600 line-clamp-2 leading-relaxed">
                                <%= event.description %>
                            </p>
                            <% else %>
                            <p class="text-gray-400 italic">説明なし</p>
                            <% end %>
                        </div>

                        <!-- アクションボタン -->
                        <div class="flex flex-row md:flex-col gap-2 md:w-32">
                            <%= link_to edit_admin_calendar_event_path(event), class: "flex-1 md:flex-none flex items-center justify-center bg-blue-50 hover:bg-blue-100 text-blue-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                            <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            <span class="hidden md:inline">編集</span>
                            <% end %>

                            <%= link_to admin_calendar_event_path(event), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "flex-1 md:flex-none flex items-center justify-center bg-red-50 hover:bg-red-100 text-red-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                            <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <span class="hidden md:inline">削除</span>
                            <% end %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <% end %>
    </div>

    <% else %>
    <!-- イベントがない場合 -->
    <div class="bg-white rounded-2xl shadow-md p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-xl text-gray-500 mb-6">この月のイベントが登録されていません</p>
        <%= link_to new_admin_calendar_event_path, class: "inline-flex items-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        イベントを追加
        <% end %>
    </div>
    <% end %>
</div>

<style>
    @keyframes pulse {

        0%,
        100% {
            opacity: 1;
        }

        50% {
            opacity: .5;
        }
    }

    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>