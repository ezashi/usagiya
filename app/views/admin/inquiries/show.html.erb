<div class="mb-6">
    <%= link_to "← お問い合わせ一覧に戻る", admin_inquiries_path, class: "text-blue-600 hover:text-blue-900" %>
</div>

<h1 class="text-3xl font-bold mb-6">お問い合わせ詳細</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">お問い合わせ情報</h2>
    <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
            <p class="text-gray-700 font-bold">受信日時</p>
            <p><%= @inquiry.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
        </div>
        <div>
            <p class="text-gray-700 font-bold">お問い合わせ番号</p>
            <p>#<%= @inquiry.id %></p>
        </div>
    </div>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">お客様情報</h2>
    <div class="space-y-2">
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">お名前</p>
            <p class="col-span-3"><%= @inquiry.name %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">電話番号</p>
            <p class="col-span-3"><%= @inquiry.phone %></p>
        </div>
        <div class="grid grid-cols-4 gap-4">
            <p class="text-gray-700 font-bold">メールアドレス</p>
            <p class="col-span-3">
                <a href="mailto:<%= @inquiry.email %>" class="text-blue-600 hover:text-blue-900">
                    <%= @inquiry.email %>
                </a>
            </p>
        </div>
    </div>
</div>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6">
    <h2 class="text-2xl font-bold mb-4">お問い合わせ内容</h2>
    <div class="p-4 bg-gray-50 rounded">
        <%= simple_format(@inquiry.content) %>
    </div>
</div>