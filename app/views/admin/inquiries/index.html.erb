<h1 class="text-3xl font-bold mb-6">お問い合わせ一覧</h1>

<div class="bg-white shadow-md rounded overflow-hidden">
    <table class="min-w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">受信日</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">お名前</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">電話番号</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">内容</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @inquiries.each do |inquiry| %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= inquiry.created_at.strftime("%Y年%m月%d日") %>
                </td>
                <td class="px-6 py-4">
                    <%= inquiry.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= inquiry.phone %>
                </td>
                <td class="px-6 py-4">
                    <%= inquiry.content.truncate(50) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "詳細", admin_inquiry_path(inquiry), class: "text-blue-600 hover:text-blue-900" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="mt-6">
    <%= paginate @inquiries %>
</div>

<% if @inquiries.empty? %>
<p class="text-center text-gray-500 mt-8">お問い合わせがありません</p>
<% end %>