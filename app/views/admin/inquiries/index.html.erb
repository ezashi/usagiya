<% content_for :page_title, "お問い合わせ管理" %>

<style>
    /* お問い合わせ管理画面のスタイル */
    .admin-inquiries {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .inquiries-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .inquiries-title {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .inquiries-subtitle {
        color: var(--admin-text-secondary);
        font-size: 1rem;
        margin: 0;
    }

    /* 統計カード */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--admin-bg-card) 0%, var(--admin-bg-secondary) 100%);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--admin-shadow-lg);
    }

    .stat-icon-wrapper {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon-primary {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.2) 100%);
    }

    .stat-icon-warning {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%);
    }

    .stat-icon-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%);
    }

    .stat-icon-info {
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.2) 0%, rgba(2, 132, 199, 0.2) 100%);
    }

    .stat-icon {
        width: 2rem;
        height: 2rem;
    }

    .stat-icon-primary .stat-icon {
        color: var(--admin-accent);
    }

    .stat-icon-warning .stat-icon {
        color: var(--admin-warning);
    }

    .stat-icon-success .stat-icon {
        color: var(--admin-success);
    }

    .stat-icon-info .stat-icon {
        color: #0ea5e9;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
    }

    /* フィルター */
    .filters-container {
        background-color: var(--admin-bg-card);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .filters-content {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .search-box {
        position: relative;
        flex: 1;
        min-width: 250px;
    }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--admin-text-muted);
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 3rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 8px;
        color: var(--admin-text);
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: var(--admin-accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .filter-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .filter-btn {
        padding: 0.5rem 1rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 6px;
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .filter-btn:hover {
        background-color: var(--admin-bg-hover);
        border-color: var(--admin-accent);
        color: var(--admin-text);
    }

    .filter-btn.active {
        background-color: var(--admin-primary);
        border-color: var(--admin-primary);
        color: white;
    }

    /* お問い合わせリスト */
    .inquiries-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .inquiry-item {
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .inquiry-item:hover {
        border-color: var(--admin-accent);
        box-shadow: var(--admin-shadow);
    }

    .inquiry-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 1rem;
    }

    .inquiry-meta {
        flex: 1;
    }

    .inquiry-name-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
    }

    .inquiry-name {
        color: var(--admin-text);
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-pending {
        background-color: rgba(245, 158, 11, 0.2);
        color: var(--admin-warning);
    }

    .status-in-progress {
        background-color: rgba(59, 130, 246, 0.2);
        color: var(--admin-accent);
    }

    .status-resolved {
        background-color: rgba(16, 185, 129, 0.2);
        color: var(--admin-success);
    }

    .inquiry-contact {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--admin-text-secondary);
        font-size: 0.95rem;
    }

    .contact-item svg {
        color: var(--admin-text-muted);
    }

    .inquiry-actions {
        display: flex;
        gap: 0.5rem;
    }

    .status-btn {
        padding: 0.5rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--admin-text-secondary);
    }

    .status-btn:hover {
        transform: translateY(-1px);
        background-color: var(--admin-bg-hover);
        color: var(--admin-accent);
    }

    .icon-btn {
        padding: 0.5rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .icon-btn:hover {
        transform: translateY(-1px);
    }

    .reply-btn {
        color: var(--admin-accent);
        border-color: var(--admin-accent);
    }

    .reply-btn:hover {
        background-color: rgba(59, 130, 246, 0.1);
    }

    .delete-btn {
        color: var(--admin-error);
        border-color: var(--admin-error);
    }

    .delete-btn:hover {
        background-color: rgba(239, 68, 68, 0.1);
    }

    .inquiry-content {
        margin-bottom: 1rem;
        padding: 1rem;
        background-color: var(--admin-bg);
        border-radius: 8px;
        border-left: 3px solid var(--admin-accent);
    }

    .inquiry-text {
        color: var(--admin-text-secondary);
        line-height: 1.8;
        margin: 0;
        white-space: pre-wrap;
    }

    .inquiry-footer {
        display: flex;
        justify-content: flex-end;
    }

    .inquiry-date {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: var(--admin-text-muted);
        font-size: 0.875rem;
    }

    /* ステータス変更モーダル */
    .status-options {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .status-option {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background-color: var(--admin-bg-secondary);
        border: 2px solid var(--admin-border);
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        color: var(--admin-text);
        font-size: 1rem;
        font-weight: 500;
    }

    .status-option:hover {
        border-color: var(--admin-accent);
        background-color: var(--admin-bg-hover);
        transform: translateX(5px);
    }

    /* 空の状態 */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background-color: var(--admin-bg-card);
        border: 2px dashed var(--admin-border);
        border-radius: 12px;
    }

    .empty-icon {
        width: 4rem;
        height: 4rem;
        color: var(--admin-text-muted);
        margin: 0 auto 1.5rem;
    }

    .empty-title {
        color: var(--admin-text);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .empty-description {
        color: var(--admin-text-secondary);
        margin: 0;
    }

    @media (max-width: 768px) {
        .admin-inquiries {
            padding: 1rem;
        }

        .inquiries-title {
            font-size: 1.5rem;
        }

        .inquiry-header {
            flex-direction: column;
        }

        .inquiry-actions {
            width: 100%;
            justify-content: flex-end;
        }
    }
</style>

<div class="admin-inquiries">
    <!-- ヘッダー -->
    <div class="inquiries-header">
        <div>
            <h1 class="inquiries-title">お問い合わせ管理</h1>
            <p class="inquiries-subtitle">お客様からのお問い合わせを管理します</p>
        </div>
    </div>

    <!-- 統計カード -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-primary">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">総問い合わせ数</div>
                <div class="stat-value"><%= @inquiries.count %></div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-warning">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">未対応</div>
                <div class="stat-value"><%= @inquiries.where(status: 'pending').count %></div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-success">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">対応済み</div>
                <div class="stat-value"><%= @inquiries.where(status: 'resolved').count %></div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-info">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">今日の問い合わせ</div>
                <div class="stat-value"><%= @inquiries.where('created_at >= ?', Date.today).count %></div>
            </div>
        </div>
    </div>

    <!-- フィルター -->
    <div class="filters-container">
        <div class="filters-content">
            <div class="search-box">
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input type="text" id="inquiry-search" class="search-input" placeholder="お名前、メールアドレスで検索..." />
            </div>

            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">
                    全て
                </button>
                <button class="filter-btn" data-filter="pending">
                    未対応
                </button>
                <button class="filter-btn" data-filter="in_progress">
                    対応中
                </button>
                <button class="filter-btn" data-filter="resolved">
                    対応済み
                </button>
            </div>
        </div>
    </div>

    <!-- お問い合わせリスト -->
    <div class="admin-card">
        <div class="admin-card-body">
            <% if @inquiries.any? %>
            <div class="inquiries-list" id="inquiries-list">
                <% @inquiries.order(created_at: :desc).each do |inquiry| %>
                <div class="inquiry-item" data-inquiry-id="<%= inquiry.id %>" data-status="<%= inquiry.status || 'pending' %>" data-search="<%= "#{inquiry.name} #{inquiry.email}".downcase %>">
                    <div class="inquiry-header">
                        <div class="inquiry-meta">
                            <div class="inquiry-name-wrapper">
                                <h3 class="inquiry-name"><%= inquiry.name %></h3>
                                <% status = inquiry.status || 'pending' %>
                                <% if status == 'pending' %>
                                <span class="status-badge status-pending">未対応</span>
                                <% elsif status == 'in_progress' %>
                                <span class="status-badge status-in-progress">対応中</span>
                                <% else %>
                                <span class="status-badge status-resolved">対応済み</span>
                                <% end %>
                            </div>
                            <div class="inquiry-contact">
                                <div class="contact-item">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    <%= inquiry.email %>
                                </div>
                                <div class="contact-item">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    <%= inquiry.phone %>
                                </div>
                            </div>
                        </div>
                        <div class="inquiry-actions">
                            <button class="status-btn" onclick="changeStatus(<%= inquiry.id %>, event)">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                            </button>
                            <%= link_to "mailto:#{inquiry.email}", class: "icon-btn reply-btn", target: "_blank", title: "返信" do %>
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                            </svg>
                            <% end %>
                            <%= button_to admin_inquiry_path(inquiry), 
                                method: :delete,
                                class: "icon-btn delete-btn",
                                data: { confirm: "本当に削除しますか？" },
                                title: "削除" do %>
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <% end %>
                        </div>
                    </div>

                    <div class="inquiry-content">
                        <%= simple_format(inquiry.content, {}, wrapper_tag: "p", class: "inquiry-text") %>
                    </div>

                    <div class="inquiry-footer">
                        <span class="inquiry-date">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <%= inquiry.created_at.strftime('%Y年%m月%d日 %H:%M') %>
                        </span>
                    </div>
                </div>
                <% end %>
            </div>
            <% else %>
            <div class="empty-state">
                <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
                <h3 class="empty-title">お問い合わせはまだありません</h3>
                <p class="empty-description">お客様からお問い合わせがあると、ここに表示されます。</p>
            </div>
            <% end %>
        </div>
    </div>
</div>

<!-- ステータス変更モーダル -->
<div id="status-modal" class="admin-modal-overlay" style="display: none;">
    <div class="admin-modal" style="max-width: 400px;">
        <div class="admin-modal-header">
            <h2 class="admin-modal-title">ステータスを変更</h2>
            <button class="close-modal-btn" id="close-status-modal">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <div class="admin-modal-body">
            <div class="status-options">
                <button class="status-option" data-status="pending">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>未対応</span>
                </button>
                <button class="status-option" data-status="in_progress">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>対応中</span>
                </button>
                <button class="status-option" data-status="resolved">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>対応済み</span>
                </button>
            </div>
        </div>
    </div>
</div>


<script>
    let selectedInquiryId = null;

    // 検索機能
    document.getElementById('inquiry-search')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const inquiries = document.querySelectorAll('.inquiry-item');

        inquiries.forEach(inquiry => {
            const searchText = inquiry.dataset.search;
            if (searchText.includes(searchTerm)) {
                inquiry.style.display = '';
            } else {
                inquiry.style.display = 'none';
            }
        });
    });

    // フィルター機能
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');

            const filter = this.dataset.filter;
            const inquiries = document.querySelectorAll('.inquiry-item');

            inquiries.forEach(inquiry => {
                if (filter === 'all' || inquiry.dataset.status === filter) {
                    inquiry.style.display = '';
                } else {
                    inquiry.style.display = 'none';
                }
            });
        });
    });

    // ステータス変更
    function changeStatus(inquiryId, event) {
        event.stopPropagation();
        selectedInquiryId = inquiryId;
        document.getElementById('status-modal').style.display = 'flex';
    }

    document.getElementById('close-status-modal')?.addEventListener('click', function() {
        document.getElementById('status-modal').style.display = 'none';
    });

    document.getElementById('status-modal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            this.style.display = 'none';
        }
    });

    document.querySelectorAll('.status-option').forEach(btn => {
        btn.addEventListener('click', function() {
            const status = this.dataset.status;

            fetch(`/admin/inquiries/${selectedInquiryId}/update_status`, {
                    method: 'PATCH',
                    headers: {
                        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        status: status
                    })
                })
                .then(response => response.json())
                .then(data => {
