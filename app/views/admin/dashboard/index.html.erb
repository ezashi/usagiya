<h1 class="text-3xl font-bold mb-6">ダッシュボード</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="flex items-center">
            <div class="flex-1">
                <p class="text-gray-500 text-sm">総注文数</p>
                <p class="text-3xl font-bold text-gray-800"><%= @total_orders %></p>
            </div>
            <div class="bg-red-100 rounded-full p-3">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="flex items-center">
            <div class="flex-1">
                <p class="text-gray-500 text-sm">総お問い合わせ数</p>
                <p class="text-3xl font-bold text-gray-800"><%= @total_inquiries %></p>
            </div>
            <div class="bg-blue-100 rounded-full p-3">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="flex items-center">
            <div class="flex-1">
                <p class="text-gray-500 text-sm">商品数</p>
                <p class="text-3xl font-bold text-gray-800"><%= Product.count %></p>
            </div>
            <div class="bg-green-100 rounded-full p-3">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="flex items-center">
            <div class="flex-1">
                <p class="text-gray-500 text-sm">お知らせ数</p>
                <p class="text-3xl font-bold text-gray-800"><%= Notice.count %></p>
            </div>
            <div class="bg-yellow-100 rounded-full p-3">
                <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4">最近の注文</h2>
        <% if @recent_orders.any? %>
        <div class="space-y-3">
            <% @recent_orders.each do |order| %>
            <div class="border-b border-gray-200 pb-3">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="font-semibold"><%= order.customer_name %></p>
                        <p class="text-sm text-gray-600"><%= order.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
                    </div>
                    <div class="text-right">
                        <p class="font-bold">¥<%= number_with_delimiter(order.total_amount) %></p>
                        <%= link_to "詳細", admin_order_path(order), class: "text-sm text-blue-600 hover:text-blue-900" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <div class="mt-4 text-center">
            <%= link_to "すべての注文を見る →", admin_orders_path, class: "text-blue-600 hover:text-blue-900" %>
        </div>
        <% else %>
        <p class="text-gray-500 text-center py-8">注文がありません</p>
        <% end %>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4">最近のお問い合わせ</h2>
        <% if @recent_inquiries.any? %>
        <div class="space-y-3">
            <% @recent_inquiries.each do |inquiry| %>
            <div class="border-b border-gray-200 pb-3">
                <div class="flex justify-between items-start">
                    <div class="flex-1">
                        <p class="font-semibold"><%= inquiry.name %></p>
                        <p class="text-sm text-gray-600"><%= inquiry.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
                        <p class="text-sm text-gray-700 mt-1"><%= inquiry.content.truncate(50) %></p>
                    </div>
                    <div>
                        <%= link_to "詳細", admin_inquiry_path(inquiry), class: "text-sm text-blue-600 hover:text-blue-900" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <div class="mt-4 text-center">
            <%= link_to "すべてのお問い合わせを見る →", admin_inquiries_path, class: "text-blue-600 hover:text-blue-900" %>
        </div>
        <% else %>
        <p class="text-gray-500 text-center py-8">お問い合わせがありません</p>
        <% end %>
    </div>
</div>