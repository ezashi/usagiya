<% content_for :page_title, "ダッシュボード" %>

<style>
    /* ダッシュボード固有のスタイル */
    .admin-dashboard {
        padding: 2rem;
        max-width: 1600px;
        margin: 0 auto;
    }

    .dashboard-header {
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .dashboard-title {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .dashboard-subtitle {
        color: var(--admin-text-secondary);
        font-size: 1rem;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    /* 統計カード */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--admin-bg-card) 0%, var(--admin-bg-secondary) 100%);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--admin-shadow-lg);
    }

    .stat-icon-wrapper {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon-primary {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.2) 100%);
    }

    .stat-icon-warning {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%);
    }

    .stat-icon-info {
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.2) 0%, rgba(2, 132, 199, 0.2) 100%);
    }

    .stat-icon-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%);
    }

    .stat-icon {
        width: 2rem;
        height: 2rem;
    }

    .stat-icon-primary .stat-icon {
        color: #3b82f6;
    }

    .stat-icon-warning .stat-icon {
        color: #f59e0b;
    }

    .stat-icon-info .stat-icon {
        color: #0ea5e9;
    }

    .stat-icon-success .stat-icon {
        color: #10b981;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
        margin: 0 0 0.25rem 0;
    }

    .stat-value {
        color: var(--admin-text);
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
    }

    /* 商品グリッド */
    .products-section {
        background: var(--admin-bg-card);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .section-title {
        color: var(--admin-text);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 1.5rem;
    }

    .product-card {
        background: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .product-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--admin-shadow-lg);
        border-color: var(--admin-primary);
    }

    .product-image {
        width: 100%;
        aspect-ratio: 1;
        object-fit: cover;
        background: #f3f4f6;
    }

    .product-info {
        padding: 1rem;
    }

    .product-name {
        color: var(--admin-text);
        font-size: 0.875rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-price {
        color: var(--admin-primary);
        font-size: 1rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .product-badges {
        display: flex;
        gap: 0.25rem;
        flex-wrap: wrap;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-weight: 500;
    }

    .badge-featured {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
    }

    .badge-seasonal {
        background: rgba(14, 165, 233, 0.1);
        color: #0ea5e9;
    }

    .badge-hidden {
        background: rgba(107, 114, 128, 0.1);
        color: #6b7280;
    }

    /* ペジネーション */
    .pagination-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    /* 空の状態 */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--admin-bg-secondary);
        border: 2px dashed var(--admin-border);
        border-radius: 12px;
    }

    .empty-icon {
        width: 4rem;
        height: 4rem;
        color: var(--admin-text-muted);
        margin: 0 auto 1.5rem;
    }

    .empty-title {
        color: var(--admin-text);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .empty-description {
        color: var(--admin-text-secondary);
        margin: 0 0 1.5rem 0;
    }

    /* レスポンシブデザイン */
    @media (max-width: 1400px) {
        .products-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @media (max-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .stats-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .admin-dashboard {
            padding: 1rem;
        }

        .dashboard-title {
            font-size: 1.5rem;
        }

        .header-content {
            flex-direction: column;
            align-items: stretch;
        }

        .products-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .stats-container {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 480px) {
        .products-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="admin-dashboard">
    <!-- ヘッダーセクション -->
    <div class="dashboard-header">
        <div class="header-content">
            <div>
                <h1 class="dashboard-title">商品管理ダッシュボード</h1>
                <p class="dashboard-subtitle">全ての商品を一覧で確認・管理します</p>
            </div>
            <div class="header-actions">
                <%= link_to new_admin_product_path, class: "admin-btn admin-btn-primary" do %>
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                商品を追加
                <% end %>
                <%= link_to featured_admin_products_path, class: "admin-btn admin-btn-secondary" do %>
                おすすめ商品管理
                <% end %>
                <%= link_to seasonal_admin_products_path, class: "admin-btn admin-btn-secondary" do %>
                季節限定商品管理
                <% end %>
            </div>
        </div>
    </div>

    <!-- 統計カード -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-primary">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">全商品数</p>
                <p class="stat-value"><%= @total_products %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-warning">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">おすすめ商品</p>
                <p class="stat-value"><%= @featured_products_count %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-info">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">季節限定商品</p>
                <p class="stat-value"><%= @seasonal_products_count %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-success">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">表示中の商品</p>
                <p class="stat-value"><%= @visible_products_count %></p>
            </div>
        </div>
    </div>

    <!-- 商品一覧セクション -->
    <div class="products-section">
        <div class="section-header">
            <h2 class="section-title">商品一覧</h2>
            <div class="header-actions">
                <%= link_to admin_products_path, class: "admin-btn admin-btn-secondary" do %>
                詳細な商品管理画面
                <% end %>
            </div>
        </div>

        <% if @products.any? %>
        <div class="products-grid">
            <% @products.each do |product| %>
            <%= link_to [:admin, product], class: "product-card" do %>
            <%= image_tag product.image_path, class: "product-image", alt: product.name %>
            <div class="product-info">
                <h3 class="product-name"><%= product.name %></h3>
                <p class="product-price">¥<%= number_with_delimiter(product.price) %></p>
                <div class="product-badges">
                    <% if product.featured? %>
                    <span class="badge badge-featured">おすすめ</span>
                    <% end %>
                    <% if product.seasonal? %>
                    <span class="badge badge-seasonal">季節限定</span>
                    <% end %>
                    <% unless product.visible? %>
                    <span class="badge badge-hidden">非表示</span>
                    <% end %>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>

        <!-- ペジネーション -->
        <% if @products.total_pages > 1 %>
        <div class="pagination-wrapper">
            <%= paginate @products %>
        </div>
        <% end %>
        <% else %>
        <!-- 空の状態 -->
        <div class="empty-state">
            <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            <h3 class="empty-title">商品がまだ登録されていません</h3>
            <p class="empty-description">最初の商品を追加して、商品管理を始めましょう。</p>
            <%= link_to "商品を追加", new_admin_product_path, class: "admin-btn admin-btn-primary" %>
        </div>
        <% end %>
    </div>
</div>