<% content_for :page_title, "ダッシュボード" %>

<div class="space-y-6">
    <!-- ウェルカムメッセージ -->
    <div class="bg-gradient-to-r from-pink-500 to-pink-600 rounded-2xl shadow-lg p-6 md:p-8 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold mb-2">おかえりなさい！</h1>
                <p class="text-pink-100">今日も素敵な一日をお過ごしください</p>
            </div>
            <div class="hidden md:block">
                <svg class="w-20 h-20 text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- 統計カード -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- 総注文数 -->
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                            <svg class="w-7 h-7 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500 font-medium">総注文数</p>
                        <p class="text-3xl font-bold text-gray-800"><%= @total_orders %></p>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-100">
                    <%= link_to admin_orders_path, class: "flex items-center text-sm text-red-600 hover:text-red-700 font-medium" do %>
                    詳細を見る
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <% end %>
                </div>
            </div>
        </div>

        <!-- 総お問い合わせ数 -->
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                            <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500 font-medium">お問い合わせ</p>
                        <p class="text-3xl font-bold text-gray-800"><%= @total_inquiries %></p>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-100">
                    <%= link_to admin_inquiries_path, class: "flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium" do %>
                    詳細を見る
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <% end %>
                </div>
            </div>
        </div>

        <!-- 商品数 -->
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                            <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500 font-medium">登録商品数</p>
                        <p class="text-3xl font-bold text-gray-800"><%= Product.count %></p>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-100">
                    <%= link_to admin_products_path, class: "flex items-center text-sm text-green-600 hover:text-green-700 font-medium" do %>
                    詳細を見る
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <% end %>
                </div>
            </div>
        </div>

        <!-- お知らせ数 -->
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center">
                            <svg class="w-7 h-7 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-500 font-medium">お知らせ数</p>
                        <p class="text-3xl font-bold text-gray-800"><%= Notice.count %></p>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-100">
                    <%= link_to admin_notices_path, class: "flex items-center text-sm text-yellow-600 hover:text-yellow-700 font-medium" do %>
                    詳細を見る
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <!-- クイックアクション -->
    <div class="bg-white rounded-2xl shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            クイックアクション
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <%= link_to new_admin_product_path, class: "flex flex-col items-center justify-center p-4 bg-gradient-to-br from-red-50 to-red-100 hover:from-red-100 hover:to-red-200 rounded-xl transition-all duration-300 transform hover:scale-105" do %>
            <svg class="w-10 h-10 text-red-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span class="text-sm font-medium text-gray-800">商品追加</span>
            <% end %>

            <%= link_to new_admin_notice_path, class: "flex flex-col items-center justify-center p-4 bg-gradient-to-br from-blue-50 to-blue-100 hover:from-blue-100 hover:to-blue-200 rounded-xl transition-all duration-300 transform hover:scale-105" do %>
            <svg class="w-10 h-10 text-blue-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
            </svg>
            <span class="text-sm font-medium text-gray-800">お知らせ投稿</span>
            <% end %>

            <%= link_to new_admin_calendar_event_path, class: "flex flex-col items-center justify-center p-4 bg-gradient-to-br from-green-50 to-green-100 hover:from-green-100 hover:to-green-200 rounded-xl transition-all duration-300 transform hover:scale-105" do %>
            <svg class="w-10 h-10 text-green-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="text-sm font-medium text-gray-800">カレンダー追加</span>
            <% end %>

            <%= link_to root_path, target: "_blank", class: "flex flex-col items-center justify-center p-4 bg-gradient-to-br from-purple-50 to-purple-100 hover:from-purple-100 hover:to-purple-200 rounded-xl transition-all duration-300 transform hover:scale-105" do %>
            <svg class="w-10 h-10 text-purple-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <span class="text-sm font-medium text-gray-800">サイトプレビュー</span>
            <% end %>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- 最近の注文 -->
        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
            <div class="bg-gradient-to-r from-red-500 to-red-600 px-6 py-4">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    最近の注文
                </h2>
            </div>

            <div class="p-6">
                <% if @recent_orders.any? %>
                <div class="space-y-4">
                    <% @recent_orders.each do |order| %>
                    <%= link_to admin_order_path(order), class: "block p-4 bg-gray-50 hover:bg-gray-100 rounded-xl transition-colors" do %>
                    <div class="flex items-center justify-between mb-2">
                        <span class="font-bold text-gray-800"><%= order.customer_name %></span>
                        <span class="text-sm text-gray-500"><%= order.created_at.strftime("%m/%d %H:%M") %></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">
                            <%= order.order_items.sum(:quantity) %>個
                        </span>
                        <span class="text-lg font-bold text-red-600">
                            ¥<%= number_with_delimiter(order.total_amount) %>
                        </span>
                    </div>
                    <% end %>
                    <% end %>
                </div>
                <div class="mt-6 text-center">
                    <%= link_to admin_orders_path, class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium" do %>
                    すべての注文を見る
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                    <% end %>
                </div>
                <% else %>
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <p class="text-gray-500">まだ注文がありません</p>
                </div>
                <% end %>
            </div>
        </div>

        <!-- 最近のお問い合わせ -->
        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-4">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                    </svg>
                    最近のお問い合わせ
                </h2>
            </div>

            <div class="p-6">
                <% if @recent_inquiries.any? %>
                <div class="space-y-4">
                    <% @recent_inquiries.each do |inquiry| %>
                    <%= link_to admin_inquiry_path(inquiry), class: "block p-4 bg-gray-50 hover:bg-gray-100 rounded-xl transition-colors" do %>
                    <div class="flex items-center justify-between mb-2">
                        <span class="font-bold text-gray-800"><%= inquiry.name %></span>
                        <span class="text-sm text-gray-500"><%= inquiry.created_at.strftime("%m/%d %H:%M") %></span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">
                        <%= inquiry.content.truncate(60) %>
                    </p>
                    <% end %>
                    <% end %>
                </div>
                <div class="mt-6 text-center">
                    <%= link_to admin_inquiries_path, class: "inline-flex items-center text-blue-600 hover:text-blue-700 font-medium" do %>
                    すべてのお問い合わせを見る
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                    <% end %>
                </div>
                <% else %>
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    <p class="text-gray-500">まだお問い合わせがありません</p>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>