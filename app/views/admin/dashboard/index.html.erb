<% content_for :page_title, "ダッシュボード" %>

<style>
    /* ダッシュボード基本スタイル */
    .admin-dashboard {
        padding: 2rem;
        max-width: 1600px;
        margin: 0 auto;
    }

    /* 統計カード */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--admin-bg-card) 0%, #f8f9fa 100%);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--admin-shadow-lg);
    }

    .stat-icon-wrapper {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .stat-icon-primary {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(37, 99, 235, 0.15) 100%);
    }

    .stat-icon-warning {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(217, 119, 6, 0.15) 100%);
    }

    .stat-icon-info {
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.15) 0%, rgba(2, 132, 199, 0.15) 100%);
    }

    .stat-icon-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);
    }

    .stat-icon {
        width: 2rem;
        height: 2rem;
    }

    .stat-icon-primary .stat-icon {
        color: #3b82f6;
    }

    .stat-icon-warning .stat-icon {
        color: #f59e0b;
    }

    .stat-icon-info .stat-icon {
        color: #0ea5e9;
    }

    .stat-icon-success .stat-icon {
        color: #10b981;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
        margin: 0 0 0.25rem 0;
        font-weight: 500;
    }

    .stat-value {
        color: var(--admin-text);
        font-size: 1.875rem;
        font-weight: 700;
        margin: 0;
        line-height: 1;
    }

    /* カレンダーセクション */
    .calendar-section {
        background: var(--admin-bg-card);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .calendar-title {
        color: var(--admin-text);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .calendar-nav {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .calendar-nav-btn {
        background: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        color: var(--admin-text);
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

    .calendar-nav-btn:hover {
        background: var(--admin-bg);
        border-color: var(--admin-primary);
    }

    .calendar-nav-btn svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    .current-month {
        color: var(--admin-text);
        font-size: 1.125rem;
        font-weight: 600;
        min-width: 150px;
        text-align: center;
    }

    /* カレンダーグリッド */
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 0.5rem;
    }

    .calendar-weekday {
        background: var(--admin-bg-secondary);
        padding: 0.75rem;
        text-align: center;
        font-weight: 600;
        color: var(--admin-text-secondary);
        border-radius: 6px;
        font-size: 0.875rem;
    }

    .calendar-day {
        background: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 8px;
        padding: 0.75rem;
        min-height: 120px;
        transition: all 0.2s;
    }

    .calendar-day.other-month {
        opacity: 0.3;
        cursor: default;
    }

    .calendar-day.today {
        border-color: var(--admin-primary);
        background: rgba(59, 130, 246, 0.05);
    }

    .calendar-day-number {
        color: var(--admin-text);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .calendar-day-content {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
    }

    .calendar-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .calendar-badge:hover {
        opacity: 0.8;
        transform: translateX(2px);
    }

    .calendar-badge-orders {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
    }

    .calendar-badge-inquiries {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
    }

    .calendar-badge-icon {
        width: 0.875rem;
        height: 0.875rem;
    }

    /* レスポンシブデザイン */
    @media (max-width: 1024px) {
        .stats-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .admin-dashboard {
            padding: 1rem;
        }

        .calendar-section {
            padding: 1rem;
        }

        .calendar-grid {
            gap: 0.25rem;
        }

        .calendar-day {
            min-height: 80px;
            padding: 0.5rem;
        }

        .calendar-day-number {
            font-size: 0.875rem;
        }

        .calendar-badge {
            font-size: 0.625rem;
            padding: 0.125rem 0.375rem;
        }

        .stats-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="admin-dashboard">
    <!-- 統計カード -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-primary">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">今週の注文数</p>
                <p class="stat-value"><%= @this_week_orders_count %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-warning">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">本日の注文数</p>
                <p class="stat-value"><%= @today_orders_count %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-info">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">今月のお問い合わせ数</p>
                <p class="stat-value"><%= @this_month_inquiries_count %></p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-success">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">今週のお問い合わせ数</p>
                <p class="stat-value"><%= @this_week_inquiries_count %></p>
            </div>
        </div>
    </div>

    <!-- カレンダーセクション -->
    <div class="calendar-section">
        <div class="calendar-header">
            <h2 class="calendar-title">注文・お問い合わせカレンダー</h2>
            <div class="calendar-nav">
                <%= link_to admin_root_path(month: @current_month.prev_month.strftime('%Y-%m-01')), class: "calendar-nav-btn" do %>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <% end %>
                <span class="current-month"><%= @current_month.strftime('%Y年%-m月') %></span>
                <%= link_to admin_root_path(month: @current_month.next_month.strftime('%Y-%m-01')), class: "calendar-nav-btn" do %>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <% end %>
            </div>
        </div>

        <div class="calendar-grid">
            <!-- 曜日ヘッダー -->
            <div class="calendar-weekday">日</div>
            <div class="calendar-weekday">月</div>
            <div class="calendar-weekday">火</div>
            <div class="calendar-weekday">水</div>
            <div class="calendar-weekday">木</div>
            <div class="calendar-weekday">金</div>
            <div class="calendar-weekday">土</div>

            <!-- カレンダーの日付 -->
            <% 
            month_start = @current_month.beginning_of_month
            month_end = @current_month.end_of_month
            calendar_start = month_start.beginning_of_week(:sunday)
            calendar_end = month_end.end_of_week(:sunday)
            
            (calendar_start..calendar_end).each do |date|
              is_current_month = date.month == @current_month.month
              is_today = date == Date.today
              day_data = @calendar_data[date.day] if is_current_month
            %>
            <div class="calendar-day <%= 'other-month' unless is_current_month %> <%= 'today' if is_today %>" data-date="<%= date.strftime('%Y-%m-%d') %>">
                <div class="calendar-day-number"><%= date.day %></div>
                <% if is_current_month && day_data %>
                <div class="calendar-day-content">
                    <% if day_data[:orders_count] > 0 %>
                    <%= link_to admin_orders_path(date: date.strftime('%Y-%m-%d')), class: "calendar-badge calendar-badge-orders", 
                           title: day_data[:order_products].map { |item| "#{item[:name]} x#{item[:quantity]}" }.join(', ') do %>
                    <svg class="calendar-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    注文 <%= day_data[:orders_count] %>件
                    <% end %>
                    <% end %>
                    <% if day_data[:inquiries_count] > 0 %>
                    <%= link_to admin_inquiries_path(date: date.strftime('%Y-%m-%d')), class: "calendar-badge calendar-badge-inquiries" do %>
                    <svg class="calendar-badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                    </svg>
                    問合せ <%= day_data[:inquiries_count] %>件
                    <% end %>
                    <% end %>
                </div>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>