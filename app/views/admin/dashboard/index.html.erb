<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">管理画面</h1>

    <!-- 統計情報 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">総商品数</div>
            <div class="text-3xl font-bold text-gray-900"><%= @total_products %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">表示中の商品</div>
            <div class="text-3xl font-bold text-green-600"><%= @visible_products %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">注目商品</div>
            <div class="text-3xl font-bold text-blue-600"><%= @featured_products %></div>
        </div>
    </div>

    <!-- クイックアクセス -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">クイックアクセス</h2>
        <div class="space-y-2">
            <%= link_to "商品一覧・管理", admin_products_path, class: "block px-4 py-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition" %>
            <%= link_to "新規商品登録", new_admin_product_path, class: "block px-4 py-3 bg-blue-50 hover:bg-blue-100 text-blue-700 rounded-lg transition" %>
        </div>
    </div>
</div>