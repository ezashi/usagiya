    // ã‚¨ãƒ‡ã‚£ã‚¿ã®å†…å®¹ã‚’ä¿å­˜
    window.saveProductDescription = function() {
        const editor = document.getElementById('product-description-editor');
        const hiddenField = document.getElementById('product-description-hidden');
        if (editor && hiddenField) {
            hiddenField.value = editor.innerHTML;
            hiddenField.setAttribute('value', editor.innerHTML);
