    // åˆæœŸåŒ–é–¢æ•°
    function initProductEditPage() {
        const editor = document.getElementById('product-description-editor');
        const hiddenField = document.getElementById('product-description-hidden');

        // æ—¢å­˜ã®å•†å“èª¬æ˜ã‚’èª­ã¿è¾¼ã‚€
        if (editor && hiddenField && hiddenField.value) {
            editor.innerHTML = hiddenField.value;
        }

        // ã‚¨ãƒ‡ã‚£ã‚¿å†…ã®ç”»åƒã‚¯ãƒªãƒƒã‚¯å‡¦ç†ï¼ˆã‚¤ãƒ™ãƒ³ãƒˆå§”è­²ï¼‰
        if (editor && !editor.dataset.clickHandlerAttached) {
            editor.dataset.clickHandlerAttached = 'true';
            editor.addEventListener('click', function(e) {
                if (e.target.tagName === 'IMG') {
                    e.preventDefault();
                    e.stopPropagation();
                    openImageAdjustModal(e.target);
                }
            });
        }

        // ã‚¨ãƒ‡ã‚£ã‚¿ã®å¤‰æ›´ã‚’ç›£è¦–
        if (editor && !editor.dataset.inputHandlerAttached) {
            editor.dataset.inputHandlerAttached = 'true';
            editor.addEventListener('input', function() {
                saveProductDescription();
            });
        }

        // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ãƒ¢ãƒ¼ãƒ€ãƒ«ã®èƒŒæ™¯ã‚¯ãƒªãƒƒã‚¯ã§é–‰ã˜ã‚‹
        const previewModal = document.getElementById('preview-modal');
        if (previewModal && !previewModal.dataset.clickHandlerAttached) {
            previewModal.dataset.clickHandlerAttached = 'true';
            previewModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closePreviewModal();
                }
            });
        }

        // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ãƒœã‚¿ãƒ³
        const previewBtn = document.getElementById('preview-btn');
        if (previewBtn && !previewBtn.dataset.clickHandlerAttached) {
            previewBtn.dataset.clickHandlerAttached = 'true';
            previewBtn.addEventListener('click', function() {
                openPreviewModal();
            });
        }

        // å…¬é–‹çŠ¶æ…‹ãƒˆã‚°ãƒ«ã®å³åº§æ›´æ–°
        const visibleToggle = document.getElementById('visible-toggle');
        if (visibleToggle && !visibleToggle.dataset.changeHandlerAttached) {
            visibleToggle.dataset.changeHandlerAttached = 'true';
            visibleToggle.addEventListener('change', function(e) {
                const pathParts = window.location.pathname.split('/').filter(Boolean);
                const productId = pathParts[pathParts.length - 2];
                const isVisible = e.target.checked;

                const message = isVisible ?
                    'å•†å“ã‚’å…¬é–‹ã—ã¾ã™ã€‚ä¸€èˆ¬ãƒ¦ãƒ¼ã‚¶ãƒ¼ã«è¡¨ç¤ºã•ã‚Œã¾ã™ãŒã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ' :
                    'å•†å“ã‚’éå…¬é–‹ã«ã—ã¾ã™ã€‚ä¸€èˆ¬ãƒ¦ãƒ¼ã‚¶ãƒ¼ã«è¡¨ç¤ºã•ã‚Œãªããªã‚Šã¾ã™ãŒã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ';

                if (!confirm(message)) {
                    e.target.checked = !isVisible;
                    return;
                }

                const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;

                if (!csrfToken) {
                    alert('ã‚¨ãƒ©ãƒ¼: CSRF ãƒˆãƒ¼ã‚¯ãƒ³ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
                    e.target.checked = !isVisible;
                    return;
                }

                fetch(`/admin/products/${productId}/toggle_visibility`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ visible: isVisible })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        const statusText = isVisible ? 'å…¬é–‹' : 'éå…¬é–‹';
                        alert(`å•†å“ã‚’${statusText}ã«ã—ã¾ã—ãŸ`);
                    } else {
                        alert('æ›´æ–°ã«å¤±æ•—ã—ã¾ã—ãŸ');
                        e.target.checked = !isVisible;
                    }
                })
                .catch(error => {
                    alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ' + error.message);
                    e.target.checked = !isVisible;
                });
            });
        }

        // å…¬é–‹ãƒœã‚¿ãƒ³ã®ã‚«ãƒ†ã‚´ãƒªãƒ¼ãƒã‚§ãƒƒã‚¯
        const form = document.querySelector('.product-form');
        const publishButton = form?.querySelector('input[name="publish"]');

        if (publishButton && !publishButton.dataset.clickHandlerAttached) {
            publishButton.dataset.clickHandlerAttached = 'true';
            publishButton.addEventListener('click', function(e) {
                const isFeatured = document.getElementById('featured-toggle')?.checked;
                const isSeasonal = document.getElementById('seasonal-toggle')?.checked;

                if (!isFeatured && !isSeasonal) {
                    e.preventDefault();
                    alert('ã‚«ãƒ†ã‚´ãƒªãƒ¼ï¼ˆãŠã™ã™ã‚å•†å“ã¾ãŸã¯å­£ç¯€é™å®šå•†å“ï¼‰ãŒé¸æŠã•ã‚Œã¦ã„ãªã„ãŸã‚ã€ä¸‹æ›¸ãã¨ã—ã¦ä¿å­˜ã—ã¾ã™ã€‚');

                    const draftButton = form?.querySelector('input[name="draft"]');
                    if (draftButton) {
                        saveProductDescription();
                        draftButton.click();
                    }
                    return;
                }

                if (!confirm('ã“ã®å•†å“ã‚’å…¬é–‹ã—ã¦ã‚‚ã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ')) {
                    e.preventDefault();
                    return;
                }

                saveProductDescription();
            });
        }

        // ãƒ•ã‚©ãƒ¼ãƒ é€ä¿¡å‰ã«å†…å®¹ã‚’ä¿å­˜
        if (form && !form.dataset.submitHandlerAttached) {
            form.dataset.submitHandlerAttached = 'true';
            form.addEventListener('submit', function(e) {
                saveProductDescription();
            });
        }
    }

    // Escapeã‚­ãƒ¼ã§é–‰ã˜ã‚‹ï¼ˆã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚¤ãƒ™ãƒ³ãƒˆï¼‰
    if (!window.productEditKeydownAttached) {
        window.productEditKeydownAttached = true;
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                if (typeof closePreviewModal === 'function') closePreviewModal();
                if (typeof closeImageAdjustModal === 'function') closeImageAdjustModal();
                if (typeof closeImageSettingsModal === 'function') closeImageSettingsModal();
            }
        });
    }

    // DOMContentLoaded ã¨ turbo:load ã®ä¸¡æ–¹ã§åˆæœŸåŒ–
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initProductEditPage);
    } else {
        initProductEditPage();
    }

    // Turboå¯¾å¿œï¼šãƒšãƒ¼ã‚¸é·ç§»å¾Œã®ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ã¨å†åˆæœŸåŒ–
    document.addEventListener('turbo:before-cache', function() {
        window.productEditInitialized = false;
    });

    document.addEventListener('turbo:load', function() {
        // å•†å“ç·¨é›†ãƒšãƒ¼ã‚¸ã‹ãƒã‚§ãƒƒã‚¯
        if (window.location.pathname.includes('/admin/products/') && window.location.pathname.includes('/edit')) {
            initProductEditPage();
        }
    });
})();
</script>