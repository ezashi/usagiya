    // ç¾åœ¨ã®ç”»åƒã‚’å‰Šé™¤
    window.deleteCurrentImage = function() {
        if (!window.currentEditingImage) return;

        if (confirm('ã“ã®ç”»åƒã‚’å‰Šé™¤ã—ã¦ã‚‚ã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ')) {
            const container = window.currentEditingImage.closest('.product-image-container');
