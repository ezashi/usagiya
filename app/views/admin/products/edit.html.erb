    // ç”»åƒèª¿æ•´ã‚’é©ç”¨
    window.applyImageAdjustments = function() {
        if (!window.currentEditingImage) return;

        const widthValue = document.getElementById('image-width-input').value;
        applyImageSize(window.currentEditingImage, widthValue);

        if (window.currentImageAlign === 'center') {
