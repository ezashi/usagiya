<% content_for :page_title, "商品管理" %>

<div class="space-y-6">
    <!-- ヘッダー -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">商品管理</h1>
            <p class="text-gray-600 mt-1">登録されている商品の管理</p>
        </div>
        <%= link_to new_admin_product_path, class: "inline-flex items-center justify-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        新規商品追加
        <% end %>
    </div>

    <!-- 検索・フィルター -->
    <div class="bg-white rounded-2xl shadow-md p-6">
        <%= form_with url: admin_products_path, method: :get, class: "flex flex-col md:flex-row gap-4" do |f| %>
        <div class="flex-1">
            <%= f.text_field :search, 
          value: params[:search],
          placeholder: "商品名で検索...",
          class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-pink-500 focus:ring-2 focus:ring-pink-200 transition-all outline-none" %>
        </div>
        <%= f.submit "検索", class: "bg-gray-700 hover:bg-gray-800 text-white font-bold py-3 px-8 rounded-xl transition-colors cursor-pointer" %>
        <% if params[:search].present? %>
        <%= link_to "クリア", admin_products_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-3 px-8 rounded-xl transition-colors text-center" %>
        <% end %>
        <% end %>
    </div>

    <% if @products.any? %>
    <!-- 商品グリッド -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group">
            <!-- 商品画像 -->
            <div class="relative aspect-square overflow-hidden bg-gray-100">
                <% if product.image.attached? %>
                <%= image_tag product.image, class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" %>
                <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                    <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <% end %>

                <!-- 表示バッジ -->
                <div class="absolute top-4 right-4">
                    <% if product.featured? %>
                    <span class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg flex items-center">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                        </svg>
                        表示中
                    </span>
                    <% else %>
                    <span class="bg-gray-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg flex items-center">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"></path>
                            <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"></path>
                        </svg>
                        非表示
                    </span>
                    <% end %>
                </div>
            </div>

            <!-- 商品情報 -->
            <div class="p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-2 line-clamp-2 h-14">
                    <%= product.name %>
                </h3>
                <p class="text-2xl font-bold text-pink-600 mb-4">
                    ¥<%= number_with_delimiter(product.price) %>
                </p>
                <p class="text-sm text-gray-600 line-clamp-3 mb-4 h-16">
                    <%= product.description %>
                </p>

                <!-- アクションボタン -->
                <div class="flex gap-2 pt-4 border-t border-gray-100">
                    <%= link_to edit_admin_product_path(product), class: "flex-1 flex items-center justify-center bg-blue-50 hover:bg-blue-100 text-blue-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    編集
                    <% end %>

                    <%= link_to admin_product_path(product), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "flex items-center justify-center bg-red-50 hover:bg-red-100 text-red-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <% end %>
                </div>
            </div>
        </div>
        <% end %>
    </div>

    <!-- ページネーション -->
    <div class="mt-8">
        <%#= paginate @products if @products.respond_to?(:total_pages) %>
    </div>

    <% else %>
    <!-- 商品がない場合 -->
    <div class="bg-white rounded-2xl shadow-md p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <p class="text-xl text-gray-500 mb-6">
            <% if params[:search].present? %>
            「<%= params[:search] %>」に一致する商品が見つかりませんでした
            <% else %>
            まだ商品が登録されていません
            <% end %>
        </p>
        <% unless params[:search].present? %>
        <%= link_to new_admin_product_path, class: "inline-flex items-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        最初の商品を追加
        <% end %>
        <% end %>
    </div>
    <% end %>
</div>