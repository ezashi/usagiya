<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">商品管理</h1>
    <%= link_to "新規商品追加", new_admin_product_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="bg-white shadow-md rounded mb-6 p-4">
    <%= form_with url: admin_products_path, method: :get, class: "flex items-center" do |f| %>
    <%= f.text_field :search, value: params[:search], placeholder: "商品名で検索", class: "flex-1 shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mr-2" %>
    <%= f.submit "検索", class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    <% end %>
</div>

<div class="bg-white shadow-md rounded overflow-hidden">
    <table class="min-w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">画像</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">商品名</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">価格</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">表示</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @products.each do |product| %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <% if product.image.attached? %>
                    <%= image_tag product.image, class: "h-16 w-16 object-cover rounded" %>
                    <% else %>
                    <div class="h-16 w-16 bg-gray-200 rounded flex items-center justify-center">
                        <span class="text-gray-400 text-xs">No Image</span>
                    </div>
                    <% end %>
                </td>
                <td class="px-6 py-4">
                    <%= product.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    ¥<%= number_with_delimiter(product.price) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= link_to toggle_featured_admin_product_path(product), method: :patch, class: "inline-block" do %>
                    <% if product.featured? %>
                    <span class="px-2 py-1 text-xs font-semibold rounded bg-green-100 text-green-800">表示中</span>
                    <% else %>
                    <span class="px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-800">非表示</span>
                    <% end %>
                    <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "編集", edit_admin_product_path(product), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "削除", admin_product_path(product), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<% if @products.empty? %>
<p class="text-center text-gray-500 mt-8">商品が登録されていません</p>
<% end %>