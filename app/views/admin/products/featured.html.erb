<% content_for :page_title, "おすすめ商品管理" %>

<style>
    /* おすすめ商品管理画面のスタイル */
    .admin-featured-products {
        padding: 2rem;
        max-width: 1600px;
        margin: 0 auto;
    }

    .featured-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .featured-title {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .featured-subtitle {
        color: var(--admin-text-secondary);
        font-size: 1rem;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
    }

    .count-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background-color: var(--admin-primary);
        color: white;
        font-size: 0.875rem;
        border-radius: 9999px;
        margin-left: 0.5rem;
    }

    /* 情報パネル */
    .info-panel {
        display: flex;
        gap: 1rem;
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(37, 99, 235, 0.1) 100%);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .info-icon {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--admin-accent);
        flex-shrink: 0;
    }

    .info-text {
        color: var(--admin-text-secondary);
        margin: 0;
        font-size: 0.95rem;
    }

    /* おすすめ商品グリッド */
    .featured-products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
        min-height: 400px;
    }

    /* 追加ボタンカード */
    .add-product-card {
        background: linear-gradient(135deg, var(--admin-bg-secondary) 0%, var(--admin-bg-card) 100%);
        border: 2px dashed var(--admin-border);
        border-radius: 12px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        cursor: pointer;
        transition: all 0.3s ease;
        color: var(--admin-text-secondary);
    }

    .add-product-card:hover {
        border-color: var(--admin-accent);
        background: linear-gradient(135deg, var(--admin-bg-card) 0%, rgba(59, 130, 246, 0.05) 100%);
        color: var(--admin-accent);
        transform: translateY(-2px);
    }

    .add-icon {
        width: 3rem;
        height: 3rem;
    }

    /* おすすめ商品カード */
    .featured-product-card {
        background-color: var(--admin-bg-card);
        border: 2px solid var(--admin-border);
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease;
        cursor: move;
    }

    .featured-product-card:hover {
        border-color: var(--admin-accent);
        box-shadow: var(--admin-shadow-lg);
        transform: translateY(-2px);
    }

    .featured-product-card.dragging {
        opacity: 0.4;
        transform: scale(0.95);
        border: 2px dashed var(--admin-accent);
    }

    .remove-btn {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        width: 2rem;
        height: 2rem;
        background-color: var(--admin-error);
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 10;
    }

    .remove-btn:hover {
        background-color: #dc2626;
        transform: scale(1.1);
        color: white;
    }

    .drag-handle {
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
        width: 2rem;
        height: 2rem;
        background-color: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        color: var(--admin-error);
        transition: all 0.2s ease;
    }

    .drag-handle:hover {
        background-color: var(--admin-error);
        border-color: var(--admin-error);
        color: white;
        transform: scale(1.1);
    }

    .product-image {
        width: 100%;
        aspect-ratio: 1;
        object-fit: cover;
    }

    .product-image.placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--admin-bg-secondary) 0%, var(--admin-bg-hover) 100%);
        color: var(--admin-text-muted);
    }

    .product-info {
        padding: 1rem;
    }

    .product-name {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .product-price {
        color: var(--admin-accent);
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0;
    }

    /* モーダル内検索ボックス */
    .search-box-modal {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .search-box-modal .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--admin-text-muted);
    }

    .search-box-modal .search-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 3rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 8px;
        color: var(--admin-text);
        font-size: 0.95rem;
    }

    .search-box-modal .search-input:focus {
        outline: none;
        border-color: var(--admin-accent);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* 利用可能な商品グリッド */
    .available-products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1.5rem;
        max-height: 60vh;
        overflow-y: auto;
        padding: 0.5rem;
    }

    .available-product-card {
        background-color: var(--admin-bg-card);
        border: 2px solid var(--admin-border);
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease;
    }

    .available-product-card:hover {
        border-color: var(--admin-accent);
        transform: translateY(-2px);
    }

    .add-btn {
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
        width: 2rem;
        height: 2rem;
        background-color: #059669;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 10;
        color: white;
    }

    .add-btn:hover {
        transform: scale(1.1);
    }


    @media (max-width: 768px) {
        .admin-featured-products {
            padding: 1rem;
        }

        .featured-title {
            font-size: 1.5rem;
        }

        .featured-header {
            flex-direction: column;
            align-items: stretch;
        }

        .header-actions {
            flex-wrap: wrap;
        }

        .featured-products-grid,
        .available-products-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        }

        .admin-modal {
            max-width: 100%;
        }

        .admin-modal-body {
            padding: 1rem;
        }
    }
</style>

<div class="admin-featured-products">
    <!-- ヘッダー -->
    <div class="featured-header">
        <div>
            <h1 class="featured-title">おすすめ商品管理</h1>
            <p class="featured-subtitle">お客様におすすめする商品を選択・並び替えできます</p>
        </div>
        <div class="header-actions">
            <button class="admin-btn admin-btn-secondary" id="preview-btn">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                プレビュー
            </button>
            <button class="admin-btn admin-btn-secondary" id="save-btn">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
                </svg>
                保存
            </button>
            <button class="admin-btn admin-btn-success" id="publish-btn">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                公開
            </button>
        </div>
    </div>

    <!-- 情報パネル -->
    <div class="info-panel">
        <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
            <p class="info-text">
                <strong>使い方:</strong> 商品をドラッグ&ドロップで並び替えできます。「保存」で一時保存、「公開」で一般公開されます。
            </p>
        </div>
    </div>

    <!-- おすすめ商品リスト -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title">
                選択中のおすすめ商品
                <span class="count-badge"><%= @featured_products.count %>個</span>
            </h2>
        </div>
        <div class="admin-card-body">
            <div class="featured-products-grid" id="featured-products-list">
                <!-- 追加ボタン -->
                <button class="add-product-card" id="add-product-btn">
                    <svg class="add-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>商品を追加</span>
                </button>

                <!-- おすすめ商品 -->
                <% @featured_products.each do |product| %>
                <div class="featured-product-card draggable" data-product-id="<%= product.id %>" draggable="true" ondblclick="window.location.href='<%= admin_product_path(product) %>'">
                    <button class="remove-btn" onclick="event.stopPropagation(); removeProduct(<%= product.id %>)">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>

                    <% if product.image.attached? %>
                    <%= image_tag product.image, class: "product-image", alt: product.name %>
                    <% else %>
                    <div class="product-image placeholder">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="40" height="40">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <% end %>

                    <div class="product-info">
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="product-price">¥<%= number_with_delimiter(product.price) %></p>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<!-- 商品追加モーダル -->
<div id="add-product-modal" class="admin-modal-overlay" style="display: none;">
    <div class="admin-modal" style="max-width: 1200px; width: 90vw;">
        <div class="admin-modal-header">
            <h2 class="admin-modal-title">商品を追加</h2>
            <button class="close-modal-btn" id="close-modal-btn">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <div class="admin-modal-body">
            <!-- 検索ボックス -->
            <div class="search-box-modal">
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input type="text" id="modal-search" class="search-input" placeholder="商品名で検索..." />
            </div>

            <!-- 利用可能な商品リスト -->
            <div class="available-products-grid" id="available-products-list">
                <% @available_products.each do |product| %>
                <div class="available-product-card" data-product-name="<%= product.name.downcase %>" data-product-id="<%= product.id %>" onclick="addProduct(<%= product.id %>)" style="cursor: pointer;">
                    <button class="add-btn" onclick="event.stopPropagation(); addProduct(<%= product.id %>)">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </button>

                    <% if product.image.attached? %>
                    <%= image_tag product.image, class: "product-image", alt: product.name %>
                    <% else %>
                    <div class="product-image placeholder">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="40" height="40">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <% end %>

                    <div class="product-info">
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="product-price">¥<%= number_with_delimiter(product.price) %></p>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>


<script>
    // モーダル開閉
    document.getElementById('add-product-btn').addEventListener('click', function() {
        document.getElementById('add-product-modal').style.display = 'flex';
    });

    document.getElementById('close-modal-btn').addEventListener('click', function() {
        document.getElementById('add-product-modal').style.display = 'none';
    });

    document.getElementById('add-product-modal').addEventListener('click', function(e) {
        if (e.target === this) {
            this.style.display = 'none';
        }
    });

    // 商品検索（モーダル内）
    document.getElementById('modal-search').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const products = document.querySelectorAll('.available-product-card');

        products.forEach(product => {
            const productName = product.dataset.productName;
            if (productName.includes(searchTerm)) {
                product.style.display = '';
            } else {
                product.style.display = 'none';
            }
        });
    });

    // ドラッグ&ドロップ（グリッドレイアウト完全対応版 + 追加ボタン固定）
    let draggedElement = null;
    const container = document.getElementById('featured-products-list');

    // 各アイテムにイベントを設定
    document.querySelectorAll('.draggable').forEach(item => {
        item.addEventListener('dragstart', function(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        });

        item.addEventListener('dragend', function() {
            this.classList.remove('dragging');
            // ドラッグ終了後も「商品を追加」ボタンを最初に保つ
            ensureAddButtonFirst();
        });

        item.addEventListener('dragover', function(e) {
            e.preventDefault();
            e.dataTransfer.dropEffect = 'move';

            if (e.target.classList.contains('draggable') && e.target !== draggedElement) {
                // ドラッグ中の要素を取得
                const dragging = document.querySelector('.dragging');
                if (!dragging) return;

                // マウスカーソルの位置を取得
                const rect = e.target.getBoundingClientRect();
                const midX = rect.left + rect.width / 2;
                const midY = rect.top + rect.height / 2;

                // 同じ行かどうかを判定
                const targetTop = Math.floor(rect.top);
                const dragTop = Math.floor(dragging.getBoundingClientRect().top);
                const sameRow = Math.abs(targetTop - dragTop) < rect.height / 2;

                if (sameRow) {
                    // 同じ行：X座標で判定
                    if (e.clientX > midX) {
                        // カーソルが要素の右半分 → 要素の後ろに挿入
                        e.target.parentNode.insertBefore(dragging, e.target.nextSibling);
                    } else {
                        // カーソルが要素の左半分 → 要素の前に挿入
                        e.target.parentNode.insertBefore(dragging, e.target);
                    }
                } else {
                    // 異なる行：Y座標で判定
                    if (e.clientY > midY) {
                        // カーソルが要素の下半分 → 要素の後ろに挿入
                        e.target.parentNode.insertBefore(dragging, e.target.nextSibling);
                    } else {
                        // カーソルが要素の上半分 → 要素の前に挿入
                        e.target.parentNode.insertBefore(dragging, e.target);
                    }
                }
            }
        });
    });

    // コンテナにもdragoverを設定（空白部分へのドロップ対応）
    container.addEventListener('dragover', function(e) {
        e.preventDefault();
    });

    container.addEventListener('drop', function(e) {
        e.preventDefault();
        // ドロップ後も「商品を追加」ボタンを最初に保つ
        ensureAddButtonFirst();
    });

    // 「商品を追加」ボタンが常に最初にあることを保証する関数
    function ensureAddButtonFirst() {
        const addButton = container.querySelector('.add-product-card');
        if (addButton && container.firstElementChild !== addButton) {
            // 「商品を追加」ボタンが最初でない場合、最初に移動
            container.insertBefore(addButton, container.firstElementChild);
        }
    }

    // 商品追加（画面上だけ、保存/公開ボタンを押すまでDBには反映されない）
    function addProduct(productId) {
        // すでに追加されているか確認
        const existingCard = document.querySelector(`.featured-product-card[data-product-id="${productId}"]`);
        if (existingCard) {
            alert('この商品はすでに追加されています');
            return;
        }

        // モーダル内の商品カードから情報を取得
        const modalCard = document.querySelector(`.available-product-card[data-product-id="${productId}"]`);
        if (!modalCard) return;

        const img = modalCard.querySelector('img')?.src || '';
        const name = modalCard.querySelector('.product-name')?.textContent || '';
        const price = modalCard.querySelector('.product-price')?.textContent || '';

        // 新しい商品カードを作成
        const newCard = document.createElement('div');
        newCard.className = 'featured-product-card draggable';
        newCard.setAttribute('data-product-id', productId);
        newCard.setAttribute('draggable', 'true');
        newCard.setAttribute('ondblclick', `window.location.href='/admin/products/${productId}'`);

        newCard.innerHTML = `
            <button class="remove-btn" onclick="event.stopPropagation(); removeProduct(${productId})">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
            ${img ? `<img src="${img}" class="product-image" alt="${name}">` : '<div class="product-image placeholder"><svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="40" height="40"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg></div>'}
            <div class="product-info">
                <h3 class="product-name">${name}</h3>
                <p class="product-price">${price}</p>
            </div>
        `;

        // ドラッグ&ドロップイベントを追加
        newCard.addEventListener('dragstart', function(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
        });

        newCard.addEventListener('dragend', function() {
            this.classList.remove('dragging');
            ensureAddButtonFirst();
        });

        newCard.addEventListener('dragover', function(e) {
            e.preventDefault();
            e.dataTransfer.dropEffect = 'move';

            if (e.target.classList.contains('draggable') && e.target !== draggedElement) {
                const dragging = document.querySelector('.dragging');
                if (!dragging) return;

                const rect = e.target.getBoundingClientRect();
                const midX = rect.left + rect.width / 2;
                const midY = rect.top + rect.height / 2;

                const targetTop = Math.floor(rect.top);
                const dragTop = Math.floor(dragging.getBoundingClientRect().top);
                const sameRow = Math.abs(targetTop - dragTop) < rect.height / 2;

                if (sameRow) {
                    if (e.clientX > midX) {
                        e.target.parentNode.insertBefore(dragging, e.target.nextSibling);
                    } else {
                        e.target.parentNode.insertBefore(dragging, e.target);
                    }
                } else {
                    if (e.clientY > midY) {
                        e.target.parentNode.insertBefore(dragging, e.target.nextSibling);
                    } else {
                        e.target.parentNode.insertBefore(dragging, e.target);
                    }
                }
            }
        });

        // グリッドに追加（「商品を追加」ボタンの直後に挿入）
        const addButton = document.querySelector('.add-product-card');
        if (addButton) {
            addButton.parentNode.insertBefore(newCard, addButton.nextSibling);
        }

        // モーダルを閉じる
        document.getElementById('add-product-modal').style.display = 'none';

        alert('商品を追加しました（画面上のみ）\n\n※「保存」または「公開」ボタンを押して確定してください。');
    }

    // 商品削除（画面上だけ、保存/公開ボタンを押すまでDBには反映されない）
    function removeProduct(productId) {
        if (confirm('この商品をおすすめ商品から削除しますか？\n\n※商品一覧からは削除されません。\n※「保存」または「公開」ボタンを押すまで確定されません。')) {
            // 画面上から削除
            const productCard = document.querySelector(`.featured-product-card[data-product-id="${productId}"]`);
            if (productCard) {
                productCard.remove();
                alert('おすすめ商品から削除しました（画面上のみ）\n\n※「保存」または「公開」ボタンを押して確定してください。');
            }
        }
    }

    // 保存（下書き保存のみ）
    document.getElementById('save-btn').addEventListener('click', function() {
        // 「商品を追加」ボタンを除外して商品のみ取得
        const products = document.querySelectorAll('.featured-product-card.draggable');
        const order = Array.from(products).map(product => product.dataset.productId);

        console.log('=== 保存処理開始 ===');
        console.log('商品ID配列:', order);
        console.log('商品数:', order.length);

        fetch('/admin/products/featured/update_order', {
                method: 'PATCH',
                headers: {
                    'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    order: order,
                    publish: false
                })
            })
            .then(response => {
                console.log('レスポンスステータス:', response.status);
                return response.json();
            })
            .then(data => {
                console.log('保存レスポンス:', data);
                if (data.success) {
                    alert('下書き保存しました！\n\n※一般ユーザーには公開されていません。公開ボタンを押すと一般ユーザーに表示されます。');
                } else {
                    console.error('保存失敗:', data);
                    alert('保存に失敗しました: ' + (data.errors ? data.errors.join(', ') : '不明なエラー'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('保存に失敗しました: ' + error.message);
            });
    });

    // 公開（一般ユーザーに公開）
    document.getElementById('publish-btn').addEventListener('click', function() {
        if (confirm('おすすめ商品を公開しますか？\n\n一般ユーザーに表示されるようになります。')) {
            // 「商品を追加」ボタンを除外して商品のみ取得
            const products = document.querySelectorAll('.featured-product-card.draggable');
            const order = Array.from(products).map(product => product.dataset.productId);

            console.log('=== 公開処理開始 ===');
            console.log('商品ID配列:', order);
            console.log('商品数:', order.length);

            fetch('/admin/products/featured/update_order', {
                    method: 'PATCH',
                    headers: {
                        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        order: order,
                        publish: true
                    })
                })
                .then(response => {
                    console.log('レスポンスステータス:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('公開レスポンス:', data);
                    if (data.success) {
                        alert('公開しました！\n\n一般ユーザーに表示されています。');
                        location.reload();
                    } else {
                        console.error('公開失敗:', data);
                        alert('公開に失敗しました: ' + (data.errors ? data.errors.join(', ') : '不明なエラー'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('公開に失敗しました: ' + error.message);
                });
        }
    });

    // プレビュー（管理者専用のモーダルプレビュー）
    document.getElementById('preview-btn').addEventListener('click', function() {
        // プレビューモーダルを表示
        const modal = document.createElement('div');
        modal.style.cssText = 'position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 10000; display: flex; align-items: center; justify-content: center; padding: 2rem;';

        const content = document.createElement('div');
        content.style.cssText = 'background: white; border-radius: 12px; max-width: 1200px; width: 100%; max-height: 90vh; overflow-y: auto; position: relative;';

        const closeBtn = document.createElement('button');
        closeBtn.textContent = '✕';
        closeBtn.style.cssText = 'position: sticky; top: 1rem; right: 1rem; float: right; width: 40px; height: 40px; border-radius: 50%; background: #ef4444; color: white; border: none; font-size: 24px; cursor: pointer; z-index: 10;';
        closeBtn.onclick = () => modal.remove();

        const title = document.createElement('div');
        title.style.cssText = 'padding: 2rem; border-bottom: 1px solid #e5e7eb;';
        title.innerHTML = '<h2 style="margin: 0; font-size: 1.5rem; color: #1f2937;">プレビュー</h2><p style="margin: 0.5rem 0 0 0; color: #6b7280; font-size: 0.875rem;">※この画面は管理者のみ表示できます。公開ボタンを押すまで一般ユーザーには表示されません。</p>';

        const preview = document.createElement('div');
        preview.style.cssText = 'padding: 2rem;';

        // おすすめ商品のグリッド表示（「商品を追加」ボタンを除外）
        const products = Array.from(document.querySelectorAll('.featured-product-card.draggable')).map(card => {
            const img = card.querySelector('img')?.src || '';
            const name = card.querySelector('.product-name')?.textContent || '';
            const price = card.querySelector('.product-price')?.textContent || '';
            return {
                img,
                name,
                price
            };
        });

        let html = '<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1.5rem;">';
        products.forEach(product => {
            html += `
                <div style="background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 8px; overflow: hidden;">
                    <div style="aspect-ratio: 1; background: white;">
                        ${product.img ? `<img src="${product.img}" style="width: 100%; height: 100%; object-fit: cover;" alt="${product.name}">` : '<div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #9ca3af;">画像なし</div>'}
                    </div>
                    <div style="padding: 1rem;">
                        <h3 style="margin: 0 0 0.5rem 0; font-size: 1rem; color: #1f2937;">${product.name}</h3>
                        <p style="margin: 0; font-size: 1.125rem; font-weight: 600; color: #ec4899;">${product.price}</p>
                    </div>
                </div>
            `;
        });
        html += '</div>';

        preview.innerHTML = html;

        content.appendChild(closeBtn);
        content.appendChild(title);
        content.appendChild(preview);
        modal.appendChild(content);
        document.body.appendChild(modal);

        // モーダルの背景クリックで閉じる
        modal.onclick = (e) => {
            if (e.target === modal) modal.remove();
        };
    });
</script>