    // ç”»åƒèª¿æ•´ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‹ã(æ—¢å­˜ç”»åƒç·¨é›†)
    function openImageAdjustModal(img) {
        currentEditingImage = img;
        const modal = document.getElementById('image-adjust-modal');
        const preview = document.getElementById('adjust-preview-img');
        const widthInput = document.getElementById('image-width-input');
        const heightInput = document.getElementById('image-height-input');

        preview.src = img.src;

        // ç¾åœ¨ã®å¹…ã‚’å–å¾—ï¼ˆpxã¾ãŸã¯%ï¼‰
        const currentWidth = img.style.width || '';
        widthInput.value = currentWidth.replace('px', '');

        // ç¾åœ¨ã®é«˜ã•ã‚’å–å¾—
        const currentHeight = img.style.height || 'auto';
        heightInput.value = currentHeight === 'auto' ? 'auto' : currentHeight.replace('px', '');

        // ç¾åœ¨ã®é…ç½®ã‚’å–å¾—
        const container = img.closest('.product-image-container');
        const textAlign = container ? (container.style.textAlign || 'left') : 'left';
        currentImageAlign = textAlign;

        // é…ç½®ãƒœã‚¿ãƒ³ã‚’ãƒã‚¤ãƒ©ã‚¤ãƒˆ
        document.querySelectorAll('#adjust-align-buttons .adjust-btn').forEach(btn => {
            btn.classList.remove('active');
            if (btn.dataset.align === textAlign) btn.classList.add('active');
        });

        modal.style.display = 'flex';
    }

    // ç”»åƒèª¿æ•´ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹
    function closeImageAdjustModal() {
        document.getElementById('image-adjust-modal').style.display = 'none';
        currentEditingImage = null;
    }

    // ç”»åƒã®é…ç½®ã‚’è¨­å®š
    function setImageAlign(align) {
        currentImageAlign = align;

        document.querySelectorAll('#adjust-align-buttons .adjust-btn').forEach(btn => {
            btn.classList.remove('active');
            if (btn.dataset.align === align) btn.classList.add('active');
        });
    }

    // ç”»åƒèª¿æ•´ã‚’é©ç”¨
    function applyImageAdjustments() {
        if (!currentEditingImage) return;

        const width = document.getElementById('image-width-input').value;
        const height = document.getElementById('image-height-input').value || 'auto';

        applyImageSize(currentEditingImage, width, height);

        // é…ç½®ã«å¿œã˜ã¦ãƒãƒ¼ã‚¸ãƒ³ã‚’è¨­å®š
        if (currentImageAlign === 'center') {
            currentEditingImage.style.margin = '0 auto';
            currentEditingImage.style.display = 'block';
        } else if (currentImageAlign === 'right') {
            currentEditingImage.style.marginLeft = 'auto';
            currentEditingImage.style.marginRight = '0';
            currentEditingImage.style.display = 'block';
        } else {
            currentEditingImage.style.marginLeft = '0';
            currentEditingImage.style.marginRight = 'auto';
            currentEditingImage.style.display = 'block';
        }

        // ã‚³ãƒ³ãƒ†ãƒŠã®é…ç½®ã‚’è¨­å®š
        let container = currentEditingImage.closest('.product-image-container');
        if (!container) {
            // ã‚³ãƒ³ãƒ†ãƒŠãŒãªã„å ´åˆã¯ä½œæˆ
            container = document.createElement('div');
            container.className = 'product-image-container';
            currentEditingImage.parentElement.insertBefore(container, currentEditingImage);
            container.appendChild(currentEditingImage);
        }
        container.style.textAlign = currentImageAlign;

        saveProductDescription();
        closeImageAdjustModal();
    }

    // ç¾åœ¨ã®ç”»åƒã‚’å‰Šé™¤
    function deleteCurrentImage() {
        if (!currentEditingImage) return;

        if (confirm('ã“ã®ç”»åƒã‚’å‰Šé™¤ã—ã¦ã‚‚ã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ')) {
            const container = currentEditingImage.closest('.product-image-container');
            if (container) {
                // æ¬¡ã®å…„å¼ŸãŒbrãªã‚‰å‰Šé™¤
                const nextSibling = container.nextSibling;
                if (nextSibling && nextSibling.tagName === 'BR') {
                    nextSibling.remove();
