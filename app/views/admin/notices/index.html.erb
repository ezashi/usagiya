<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">お知らせ管理</h1>
    <%= link_to "新規お知らせ追加", new_admin_notice_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="bg-white shadow-md rounded overflow-hidden">
    <table class="min-w-full">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">投稿日</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">タイトル</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">操作</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @notices.each do |notice| %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= notice.published_at.strftime("%Y年%m月%d日") %>
                </td>
                <td class="px-6 py-4">
                    <%= notice.title %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "編集", edit_admin_notice_path(notice), class: "text-blue-600 hover:text-blue-900" %>
                    <%= link_to "削除", admin_notice_path(notice), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<% if @notices.empty? %>
<p class="text-center text-gray-500 mt-8">お知らせが登録されていません</p>
<% end %>