<% content_for :page_title, "お知らせ管理" %>

<style>
    /* お知らせ管理画面のスタイル */
    .admin-notices {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .notices-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .notices-title {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .notices-subtitle {
        color: var(--admin-text-secondary);
        font-size: 1rem;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
    }

    /* 統計カード */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--admin-bg-card) 0%, var(--admin-bg-secondary) 100%);
        border: 1px solid var(--admin-border);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--admin-shadow-lg);
    }

    .stat-icon-wrapper {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon-primary {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.2) 100%);
    }

    .stat-icon-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%);
    }

    .stat-icon-warning {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%);
    }

    .stat-icon {
        width: 2rem;
        height: 2rem;
    }

    .stat-icon-primary .stat-icon {
        color: var(--admin-accent);
    }

    .stat-icon-success .stat-icon {
        color: var(--admin-success);
    }

    .stat-icon-warning .stat-icon {
        color: var(--admin-warning);
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        color: var(--admin-text);
        font-size: 2rem;
        font-weight: 700;
    }

    /* テーブル */
    .notices-table-wrapper {
        overflow-x: auto;
    }

    .notice-title-cell {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .notice-title-link {
        color: var(--admin-text);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .notice-title-link:hover {
        color: var(--admin-accent);
    }

    .notice-date {
        color: var(--admin-text-muted);
        font-size: 0.875rem;
    }

    .updated-at {
        color: var(--admin-text-secondary);
        font-size: 0.875rem;
    }

    .action-buttons-cell {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .icon-btn {
        padding: 0.5rem;
        background-color: var(--admin-bg-secondary);
        border: 1px solid var(--admin-border);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .icon-btn:hover {
        transform: translateY(-1px);
    }

    .edit-btn {
        color: var(--admin-accent);
        border-color: var(--admin-accent);
    }

    .edit-btn:hover {
        background-color: rgba(59, 130, 246, 0.1);
    }

    .toggle-btn {
        color: var(--admin-success);
        border-color: var(--admin-success);
    }

    .toggle-btn:hover {
        background-color: rgba(16, 185, 129, 0.1);
    }

    .delete-btn {
        color: var(--admin-error);
        border-color: var(--admin-error);
    }

    .delete-btn:hover {
        background-color: rgba(239, 68, 68, 0.1);
    }

    /* 空の状態 */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background-color: var(--admin-bg-card);
        border: 2px dashed var(--admin-border);
        border-radius: 12px;
    }

    .empty-icon {
        width: 4rem;
        height: 4rem;
        color: var(--admin-text-muted);
        margin: 0 auto 1.5rem;
    }

    .empty-title {
        color: var(--admin-text);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .empty-description {
        color: var(--admin-text-secondary);
        margin: 0 0 1.5rem 0;
    }

    @media (max-width: 768px) {
        .admin-notices {
            padding: 1rem;
        }

        .notices-title {
            font-size: 1.5rem;
        }

        .notices-header {
            flex-direction: column;
            align-items: stretch;
        }
    }
</style>

<div class="admin-notices">
    <!-- ヘッダー -->
    <div class="notices-header">
        <div>
            <h1 class="notices-title">お知らせ管理</h1>
            <p class="notices-subtitle">お客様へのお知らせを作成・管理します</p>
        </div>
        <div class="header-actions">
            <%= link_to new_admin_notice_path, class: "admin-btn admin-btn-primary" do %>
            <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            お知らせを追加
            <% end %>
        </div>
    </div>

    <!-- 統計カード -->
    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-primary">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">全お知らせ数</div>
                <div class="stat-value"><%= @notices.count %></div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-success">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">公開中</div>
                <div class="stat-value"><%= @notices.where.not(published_at: nil).count %></div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon-wrapper stat-icon-warning">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="stat-content">
                <div class="stat-label">下書き</div>
                <div class="stat-value"><%= @notices.where(published_at: nil).count %></div>
            </div>
        </div>
    </div>

    <!-- お知らせリスト -->
    <div class="admin-card">
        <div class="admin-card-body">
            <% if @notices.any? %>
            <div class="notices-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="width: 50%;">タイトル</th>
                            <th style="width: 15%;">状態</th>
                            <th style="width: 20%;">更新日時</th>
                            <th style="width: 15%; text-align: center;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @notices.order(created_at: :desc).each do |notice| %>
                        <tr>
                            <td>
                                <div class="notice-title-cell">
                                    <%= link_to edit_admin_notice_path(notice), class: "notice-title-link" do %>
                                    <%= notice.title %>
                                    <% end %>
                                    <% if notice.published? && notice.published_at %>
                                    <span class="notice-date">
                                        公開: <%= notice.published_at.strftime('%Y年%m月%d日') %>
                                    </span>
                                    <% end %>
                                </div>
                            </td>
                            <td>
                                <% if notice.published? %>
                                <span class="admin-status admin-status-published">
                                    <span class="admin-status-dot"></span>
                                    公開中
                                </span>
                                <% else %>
                                <span class="admin-status admin-status-draft">
                                    <span class="admin-status-dot"></span>
                                    下書き
                                </span>
                                <% end %>
                            </td>
                            <td>
                                <span class="updated-at">
                                    <%= notice.updated_at.strftime('%Y年%m月%d日 %H:%M') %>
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons-cell">
                                    <%= link_to edit_admin_notice_path(notice), class: "icon-btn edit-btn", title: "編集" do %>
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    <% end %>

                                    <%= button_to publish_admin_notice_path(notice), 
                                    method: :patch,
                                    class: "icon-btn toggle-btn",
                                    title: notice.published? ? "非公開にする" : "公開する" do %>
                                    <% if notice.published? %>
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                                    </svg>
                                    <% else %>
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    <% end %>
                                    <% end %>

                                    <%= button_to admin_notice_path(notice), 
                                    method: :delete,
                                    class: "icon-btn delete-btn",
                                    data: { confirm: "本当に削除しますか？\nこの操作は取り消せません。" },
                                    title: "削除" do %>
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <% else %>
            <div class="empty-state">
                <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
                <h3 class="empty-title">お知らせがまだ登録されていません</h3>
                <p class="empty-description">最初のお知らせを作成して、お客様に情報を伝えましょう。</p>
                <%= link_to new_admin_notice_path, class: "admin-btn admin-btn-primary" do %>
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                最初のお知らせを作成
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>