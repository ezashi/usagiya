<% content_for :page_title, "お知らせ管理" %>

<div class="space-y-6">
    <!-- ヘッダー -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">お知らせ管理</h1>
            <p class="text-gray-600 mt-1">お知らせの作成・編集・公開管理</p>
        </div>
        <%= link_to new_admin_notice_path, class: "inline-flex items-center justify-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        新規お知らせ追加
        <% end %>
    </div>

    <% if @notices.any? %>
    <!-- フィルタータブ -->
    <div class="bg-white rounded-xl shadow-md p-4">
        <div class="flex gap-2 overflow-x-auto">
            <button class="px-4 py-2 rounded-lg font-medium transition-colors whitespace-nowrap bg-pink-100 text-pink-700">
                すべて (<%= @notices.count %>)
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors whitespace-nowrap hover:bg-gray-100">
                公開中 (<%= @notices.select(&:published?).count %>)
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors whitespace-nowrap hover:bg-gray-100">
                下書き (<%= @notices.select(&:draft?).count %>)
            </button>
        </div>
    </div>

    <!-- お知らせリスト -->
    <div class="space-y-4">
        <% @notices.each do |notice| %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
            <div class="p-6">
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <!-- 日付と内容 -->
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-3 mb-3 flex-wrap">
                            <!-- ステータスバッジ -->
                            <% if notice.published? %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-100 text-green-800">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                公開中
                            </span>
                            <% else %>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-800">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 012 0v4a1 1 0 11-2 0V7zm2 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                                </svg>
                                下書き
                            </span>
                            <% end %>

                            <!-- 日付バッジ -->
                            <div class="<%= notice.published? ? 'bg-pink-100 text-pink-700' : 'bg-gray-100 text-gray-700' %> px-4 py-2 rounded-lg flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="font-bold text-sm">
                                    <% if notice.published? %>
                                    <%= notice.published_at.strftime("%Y年%m月%d日") %>
                                    <% else %>
                                    <%= notice.created_at.strftime("%Y年%m月%d日") %>作成
                                    <% end %>
                                </span>
                            </div>

                            <!-- NEWバッジ -->
                            <% if notice.created_at > 7.days.ago %>
                            <span class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                                NEW
                            </span>
                            <% end %>
                        </div>

                        <h3 class="text-xl font-bold text-gray-800 mb-2 line-clamp-2">
                            <%= notice.title %>
                        </h3>
                        <p class="text-gray-600 line-clamp-2 leading-relaxed">
                            <%= strip_tags(notice.content.to_s).truncate(100) %>
                        </p>
                    </div>

                    <!-- アクションボタン -->
                    <div class="flex flex-row md:flex-col gap-2 md:w-40">
                        <%= link_to edit_admin_notice_path(notice), class: "flex-1 md:flex-none flex items-center justify-center bg-blue-50 hover:bg-blue-100 text-blue-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                        <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span class="hidden md:inline">編集</span>
                        <% end %>

                        <% if notice.published? %>
                        <%= button_to publish_admin_notice_path(notice), method: :patch, class: "flex-1 md:flex-none flex items-center justify-center bg-yellow-50 hover:bg-yellow-100 text-yellow-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                        <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                        </svg>
                        <span class="hidden md:inline">非公開</span>
                        <% end %>
                        <% else %>
                        <%= button_to publish_admin_notice_path(notice), method: :patch, class: "flex-1 md:flex-none flex items-center justify-center bg-green-50 hover:bg-green-100 text-green-600 font-medium py-2 px-4 rounded-lg transition-colors", data: { confirm: "このお知らせを公開してもよろしいですか?" } do %>
                        <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span class="hidden md:inline">公開</span>
                        <% end %>
                        <% end %>

                        <%= button_to admin_notice_path(notice), method: :delete, data: { confirm: "本当に削除しますか?" }, class: "flex-1 md:flex-none flex items-center justify-center bg-red-50 hover:bg-red-100 text-red-600 font-medium py-2 px-4 rounded-lg transition-colors" do %>
                        <svg class="w-4 h-4 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <span class="hidden md:inline">削除</span>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>

    <% else %>
    <!-- お知らせがない場合 -->
    <div class="bg-white rounded-2xl shadow-md p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
        </svg>
        <p class="text-xl text-gray-500 mb-6">まだお知らせが登録されていません</p>
        <%= link_to new_admin_notice_path, class: "inline-flex items-center bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        最初のお知らせを追加
        <% end %>
    </div>
    <% end %>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>