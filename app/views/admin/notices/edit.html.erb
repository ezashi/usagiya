<h1 class="text-3xl font-bold mb-6">お知らせ編集</h1>

<%= form_with model: @notice, url: admin_notice_path(@notice), method: :patch, class: "max-w-2xl" do |f| %>
<% if @notice.errors.any? %>
<div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
    <h2 class="font-bold mb-2"><%= pluralize(@notice.errors.count, "件") %>のエラーがあります:</h2>
    <ul class="list-disc list-inside">
        <% @notice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
        <%= f.label :title, "タイトル", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
        <%= f.label :content, "内容", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_area :content, rows: 10, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
        <%= f.label :published_at, "公開日時", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.datetime_local_field :published_at, value: @notice.published_at&.strftime("%Y-%m-%dT%H:%M"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
</div>

<div class="flex items-center justify-between">
    <%= link_to "キャンセル", admin_notices_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <%= f.submit "更新する", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
</div>
<% end %>