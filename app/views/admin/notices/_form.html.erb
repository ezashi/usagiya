<%= form_with model: [:admin, notice], class: "space-y-6", id: "notice-form" do |f| %>
<!-- エラーメッセージ -->
<%= render 'shared/error_messages', object: notice, style: 'admin' %>

<div class="bg-white rounded-2xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-pink-500 to-pink-600 px-6 py-4">
        <h2 class="text-xl font-bold text-white flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
            お知らせ内容
        </h2>
    </div>

    <div class="p-6 md:p-8 space-y-6">
        <!-- ステータス表示 -->
        <% if notice.persisted? %>
        <div class="flex items-center gap-3">
            <% if notice.published? %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-green-100 text-green-800">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                公開中
            </span>
            <span class="text-sm text-gray-600">
                <%= notice.published_at.strftime("%Y年%m月%d日 %H:%M") %>に公開
            </span>
            <% else %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-yellow-100 text-yellow-800">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 012 0v4a1 1 0 11-2 0V7zm2 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                下書き
            </span>
            <% end %>
        </div>
        <% end %>

        <!-- タイトル -->
        <div>
            <%= f.label :title, class: "block text-gray-800 font-bold mb-2" do %>
            タイトル
            <span class="text-red-600 text-sm ml-1">必須</span>
            <% end %>
            <%= f.text_field :title, 
          class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-pink-500 focus:ring-2 focus:ring-pink-200 transition-all outline-none #{notice.errors[:title].any? ? 'border-red-300 bg-red-50' : ''}", 
          placeholder: "例:年末年始の営業のお知らせ",
          id: "notice_title" %>
            <% if notice.errors[:title].any? %>
            <p class="mt-2 text-sm text-red-600 flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <%= notice.errors[:title].first %>
            </p>
            <% end %>
        </div>

        <!-- 内容（Trixリッチテキストエディタ） -->
        <div>
            <%= f.label :content, class: "block text-gray-800 font-bold mb-2" do %>
            内容
            <span class="text-red-600 text-sm ml-1">必須</span>
            <% end %>
            <div class="trix-editor-wrapper">
                <%= f.rich_text_area :content, 
              class: "#{notice.errors[:content].any? ? 'border-red-300' : ''}" %>
            </div>
            <p class="mt-2 text-sm text-gray-500 flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                テキストの装飾、画像の挿入が可能です
            </p>
            <% if notice.errors[:content].any? %>
            <p class="mt-2 text-sm text-red-600 flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <%= notice.errors[:content].first %>
            </p>
            <% end %>
        </div>

        <!-- プレビュー -->
        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-3">
                <h3 class="font-bold text-gray-800 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    公開イメージ
                </h3>
                <button type="button" id="refresh-preview" class="text-sm text-blue-600 hover:text-blue-800 font-medium flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    プレビュー更新
                </button>
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm">
                <p class="text-sm text-gray-500 mb-2" id="preview-date">
                    <%= Time.current.strftime("%Y年%m月%d日") %>
                </p>
                <h4 class="font-bold text-gray-800 mb-3 text-xl" id="preview-title">
                    <%= notice.title.presence || "タイトルがここに表示されます" %>
                </h4>
                <div class="text-gray-600 prose max-w-none" id="preview-content">
                    <% if notice.content.present? %>
                    <%= notice.content %>
                    <% else %>
                    <p class="text-gray-400">内容がここに表示されます</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- アクションボタン -->
<div class="flex flex-col sm:flex-row gap-4">
    <%= link_to "キャンセル", admin_notices_path, class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-4 px-6 rounded-xl transition-colors" %>

    <%= f.submit "保存", 
      class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg",
      data: { confirm: notice.published? ? "公開中のお知らせを保存すると、一時的に非公開になります。よろしいですか?" : nil } %>

    <%= f.submit "公開", 
      class: "flex-1 bg-pink-600 hover:bg-pink-700 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg",
      data: { confirm: "このお知らせを公開してもよろしいですか?" } %>
</div>
<% end %>

<!-- JavaScriptでプレビュー更新 -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const titleInput = document.getElementById('notice_title');
        const contentEditor = document.querySelector('trix-editor');
        const previewTitle = document.getElementById('preview-title');
        const previewContent = document.getElementById('preview-content');
        const refreshButton = document.getElementById('refresh-preview');

        // タイトルのリアルタイムプレビュー
        if (titleInput) {
            titleInput.addEventListener('input', function() {
                previewTitle.textContent = this.value || 'タイトルがここに表示されます';
            });
        }

        // プレビュー更新ボタン
        if (refreshButton && contentEditor) {
            refreshButton.addEventListener('click', function() {
                const content = contentEditor.value;
                if (content.trim()) {
                    previewContent.innerHTML = content;
                } else {
                    previewContent.innerHTML = '<p class="text-gray-400">内容がここに表示されます</p>';
                }
            });
        }

        // Trix エディタの変更を自動反映（オプション）
        if (contentEditor) {
            contentEditor.addEventListener('trix-change', function() {
                const content = this.value;
                if (content.trim()) {
                    previewContent.innerHTML = content;
                } else {
                    previewContent.innerHTML = '<p class="text-gray-400">内容がここに表示されます</p>';
                }
            });
        }
    });
</script>

<style>
    /* Trixエディタのスタイル調整 */
    .trix-editor-wrapper {
        border: 2px solid #E5E7EB;
        border-radius: 0.75rem;
        overflow: hidden;
        transition: border-color 0.3s;
    }

    .trix-editor-wrapper:focus-within {
        border-color: #EC4899;
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
    }

    trix-editor {
        min-height: 300px;
        padding: 1rem;
        border: none !important;
        outline: none !important;
    }

    trix-toolbar {
        background: #F9FAFB;
        border-bottom: 1px solid #E5E7EB;
        padding: 0.5rem;
    }

    /* プレビューエリアのスタイル */
    #preview-content.prose {
        max-width: none;
    }

    #preview-content img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin: 1rem 0;
    }
</style>
<% end %>