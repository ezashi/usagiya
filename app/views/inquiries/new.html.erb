<% content_for :title, "お問い合わせ - うさぎや" %>
<% content_for :description, "うさぎやへのお問い合わせフォーム。商品やご注文に関するご質問など、お気軽にお問い合わせください。" %>

<style>
    .inquiry-container {
        min-height: 100vh;
        padding-top: 160px;
        padding-bottom: 40px;
        background-color: #f9fafb;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .inquiry-wrapper {
        width: 100%;
        max-width: 520px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .inquiry-title {
        text-align: center;
        margin-bottom: 32px;
    }

    .inquiry-title h1 {
        font-size: 1.875rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 8px;
    }

    .inquiry-title p {
        color: #666;
        font-size: 18.5px;
    }

    .inquiry-form-card {
        border-radius: 8px;
        padding: 32px;
    }

    .inquiry-form-group {
        margin-bottom: 24px;
    }

    .inquiry-label {
        display: block;
        color: #333;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .inquiry-required {
        color: #dc2626;
        font-size: 0.875rem;
    }

    .inquiry-input {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .inquiry-input:focus {
        outline: none;
        border-color: #ec4899;
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
    }

    .inquiry-input.error {
        border-color: #f87171;
        background-color: #fef2f2;
    }

    .inquiry-textarea {
        resize: vertical;
        min-height: 150px;
        font-size: 14px;
    }

    .inquiry-hint {
        color: #6b7280;
        font-size: 0.875rem;
        margin-top: 4px;
    }

    .inquiry-error-box {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 24px;
    }

    .inquiry-error-title {
        color: #991b1b;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .inquiry-error-list {
        color: #b91c1c;
        font-size: 0.875rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .inquiry-error-list li {
        margin-bottom: 4px;
    }

    .inquiry-submit-wrapper {
        text-align: center;
        padding-top: 16px;
    }

    .inquiry-submit-button {
        padding: 12px 32px;
        background-color: #ffc0cb;
        font-weight: bold;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .inquiry-submit-button:hover {
        background-color: #ff83a7;
    }

    .inquiry-contact-info {
        margin-top: 32px;
        text-align: center;
        color: #666;
    }

    .inquiry-contact-info p {
        margin-bottom: 8px;
    }

    .inquiry-phone {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        text-decoration: none;
        transition: color 0.2s;
    }

    .inquiry-phone:hover {
        color: #db2777;
    }

    .inquiry-hours {
        font-size: 0.875rem;
        margin-top: 4px;
    }

    @media (max-width: 640px) {
        .inquiry-container {
            padding-top: 100px;
        }

        .inquiry-wrapper {
            padding: 0 16px;
        }

        .inquiry-form-card {
            padding: 24px;
        }

        .inquiry-input {
            font-size: 16px;
        }

        .inquiry-title h1 {
            font-size: 1.5rem;
        }

        .inquiry-title p {
            font-size: 15px;
        }

        .inquiry-contact-info p {
            font-size: 13px;
        }
    }
</style>

<div class="inquiry-container">
    <div class="inquiry-wrapper">
        <!-- ページタイトル -->
        <div class="inquiry-title">
            <h1>お問い合わせ</h1>
            <p>お気軽にお問い合わせください。</p>
            <p>2~3日以内に返信がない場合、システムの不具合の</p>
            <p>可能性が有りますので、お手数ですが0778-62-0861までお電話ください。</p>
        </div>

        <!-- お問い合わせフォーム -->
        <%= form_with model: @inquiry, url: inquiries_path, local: true do |f| %>
        <!-- エラーメッセージ -->
        <% if @inquiry.errors.any? %>
        <div class="inquiry-error-box">
            <p class="inquiry-error-title">入力内容にエラーがあります</p>
            <ul class="inquiry-error-list">
                <% @inquiry.errors.full_messages.each do |message| %>
                <li>・<%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <!-- フォームカード -->
        <div class="inquiry-form-card">
            <!-- お名前 -->
            <div class="inquiry-form-group">
                <%= f.label :name, class: "inquiry-label" do %>
                お名前 <span class="inquiry-required">*</span>
                <% end %>
                <%= f.text_field :name, 
                        class: "inquiry-input #{@inquiry.errors[:name].any? ? 'error' : ''}", 
                        placeholder: "山田 太郎" %>
            </div>

            <!-- 電話番号 -->
            <div class="inquiry-form-group">
                <%= f.label :phone, class: "inquiry-label" do %>
                電話番号 <span class="inquiry-required">*</span>
                <% end %>
                <%= f.telephone_field :phone, 
                        class: "inquiry-input #{@inquiry.errors[:phone].any? ? 'error' : ''}", 
                        placeholder: "0778620861" %>
                <p class="inquiry-hint">※ハイフンなしで入力してください</p>
            </div>

            <!-- メールアドレス -->
            <div class="inquiry-form-group">
                <%= f.label :email, class: "inquiry-label" do %>
                メールアドレス <span class="inquiry-required">*</span>
                <% end %>
                <%= f.email_field :email, 
                        class: "inquiry-input #{@inquiry.errors[:email].any? ? 'error' : ''}", 
                        placeholder: "usagiya-oishi@gmail.com" %>
            </div>

            <!-- お問い合わせ内容 -->
            <div class="inquiry-form-group">
                <%= f.label :content, class: "inquiry-label" do %>
                お問い合わせ内容 <span class="inquiry-required">*</span>
                <% end %>
                <%= f.text_area :content, 
                        rows: 6, 
                        class: "inquiry-input inquiry-textarea #{@inquiry.errors[:content].any? ? 'error' : ''}", 
                        placeholder: "※こちらの「お問い合わせ」からのご注文,
ご予約は受けつけておりませんので「冷凍もちパイの発送」ページまたは、お電話にてお願いいたします。" %>
            </div>

            <!-- 画像認証 -->
            <div class="inquiry-form-group">
                <label class="inquiry-label">
                    画像認証 <span class="inquiry-required">*</span>
                </label>
                <%= recaptcha_tags %>
            </div>

            <!-- 送信ボタン -->
            <div class="inquiry-submit-wrapper">
                <%= f.submit "送信する", class: "inquiry-submit-button" %>
            </div>
        </div>
        <% end %>

        <!-- 連絡先情報 -->
        <div class="inquiry-contact-info">
            <p>
                内容を確認いたしまして、速やかにご回答させていただきます。<br>
                多忙な時期は返信に2〜3日お時間をいただく場合がございます。
                お急ぎの場合はお電話でお問い合わせください
            </p>
            <p>
                <a href="tel:0776-22-4152" class="inquiry-phone">0776-62-0861</a>
            </p>
            <p class="inquiry-hours">営業時間: 9:00～18:00（定休日: 日曜日・不定休: 月曜日）</p>
        </div>
    </div>
</div>