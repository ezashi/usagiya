<% content_for :title, "お問い合わせ - うさぎや" %>
<% content_for :description, "うさぎやへのお問い合わせフォーム。商品やご注文に関するご質問など、お気軽にお問い合わせください。" %>

<style>
    .inquiry-container {
        min-height: 100vh;
        padding-top: 160px;
        padding-bottom: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .inquiry-input:focus {
        outline: 2px solid #ec4899;
        outline-offset: 2px;
    }

    @media (max-width: 640px) {
        .inquiry-container {
            padding-top: 100px;
        }

        .inquiry-input {
            font-size: 16px;
        }
    }
</style>

<div class="inquiry-container bg-gray-50">
    <div class="w-full max-w-lg mx-auto px-4">
        <!-- ページタイトル -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">お問い合わせ</h1>
            <p class="text-gray-600">お気軽にお問い合わせください</p>
        </div>

        <!-- お問い合わせフォーム -->
        <%= form_with model: @inquiry, url: inquiries_path, local: true do |f| %>
        <!-- エラーメッセージ -->
        <% if @inquiry.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <p class="text-red-800 font-bold mb-2">入力内容にエラーがあります</p>
            <ul class="text-red-700 text-sm space-y-1">
                <% @inquiry.errors.full_messages.each do |message| %>
                <li>・<%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <!-- フォームカード -->
        <div class="bg-white rounded-lg shadow p-6 space-y-6">
            <!-- お名前 -->
            <div>
                <%= f.label :name, class: "block text-gray-700 font-bold mb-2" do %>
                お名前 <span class="text-red-600 text-sm">*</span>
                <% end %>
                <%= f.text_field :name, 
                        class: "inquiry-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-pink-500 #{@inquiry.errors[:name].any? ? 'border-red-400 bg-red-50' : ''}", 
                        placeholder: "山田 太郎" %>
            </div>

            <!-- 電話番号 -->
            <div>
                <%= f.label :phone, class: "block text-gray-700 font-bold mb-2" do %>
                電話番号 <span class="text-red-600 text-sm">*</span>
                <% end %>
                <%= f.telephone_field :phone, 
                        class: "inquiry-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-pink-500 #{@inquiry.errors[:phone].any? ? 'border-red-400 bg-red-50' : ''}", 
                        placeholder: "09012345678" %>
                <p class="text-gray-500 text-sm mt-1">※ハイフンなしで入力してください</p>
            </div>

            <!-- メールアドレス -->
            <div>
                <%= f.label :email, class: "block text-gray-700 font-bold mb-2" do %>
                メールアドレス <span class="text-red-600 text-sm">*</span>
                <% end %>
                <%= f.email_field :email, 
                        class: "inquiry-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-pink-500 #{@inquiry.errors[:email].any? ? 'border-red-400 bg-red-50' : ''}", 
                        placeholder: "example@example.com" %>
            </div>

            <!-- お問い合わせ内容 -->
            <div>
                <%= f.label :content, class: "block text-gray-700 font-bold mb-2" do %>
                お問い合わせ内容 <span class="text-red-600 text-sm">*</span>
                <% end %>
                <%= f.text_area :content, 
                        rows: 6, 
                        class: "inquiry-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-pink-500 resize-y #{@inquiry.errors[:content].any? ? 'border-red-400 bg-red-50' : ''}", 
                        placeholder: "お問い合わせ内容をご記入ください" %>
            </div>

            <!-- 画像認証 -->
            <div>
                <label class="block text-gray-700 font-bold mb-2">
                    画像認証 <span class="text-red-600 text-sm">*</span>
                </label>
                <%= recaptcha_tags %>
            </div>

            <!-- 送信ボタン -->
            <div class="text-center pt-4">
                <%= f.submit "送信する", class: "px-8 py-3 bg-pink-600 hover:bg-pink-700 text-white font-bold rounded-lg transition-colors cursor-pointer" %>
            </div>
        </div>
        <% end %>

        <!-- 連絡先情報 -->
        <div class="mt-8 text-center text-gray-600">
            <p class="mb-2">お急ぎの場合はお電話でお問い合わせください</p>
            <p class="text-2xl font-bold text-gray-800">
                <a href="tel:0776-22-4152" class="hover:text-pink-600 transition-colors">0776-22-4152</a>
            </p>
            <p class="text-sm mt-1">営業時間: 9:00～19:00（定休日: 日曜日）</p>
        </div>
    </div>
</div>