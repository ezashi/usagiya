<!DOCTYPE html>
<html>

<head>
    <title>御菓子処うさぎや - 管理者ページ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
</head>

<body class="admin-body">
    <!-- サイドバー -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>御菓子処うさぎや</h2>
            <p class="sidebar-subtitle">管理者ページ</p>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li>
                    <%= link_to admin_dashboard_path, class: "nav-link #{'active' if current_page?(admin_dashboard_path)}" do %>
                    <span class="nav-icon">🏠</span>
                    <span class="nav-text">ホーム</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_products_path, class: "nav-link #{'active' if current_page?(admin_products_path)}" do %>
                    <span class="nav-icon">📦</span>
                    <span class="nav-text">商品一覧</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to new_admin_product_path, class: "nav-link #{'active' if current_page?(new_admin_product_path)}" do %>
                    <span class="nav-icon">➕</span>
                    <span class="nav-text">商品を追加</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_orders_path, class: "nav-link #{'active' if current_page?(admin_orders_path)}" do %>
                    <span class="nav-icon">📋</span>
                    <span class="nav-text">注文管理</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_news_index_path, class: "nav-link #{'active' if controller_name == 'news'}" do %>
                    <span class="nav-icon">📢</span>
                    <span class="nav-text">お知らせ</span>
                    <% end %>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- メインコンテンツエリア -->
    <div class="main-wrapper">
        <!-- トップバー -->
        <header class="topbar">
            <div class="topbar-left">
                <h1 class="page-title"><%= yield :page_title %></h1>
            </div>

            <div class="topbar-right">
                <%= button_to "ログアウト", destroy_admin_session_path, method: :delete, class: "logout-btn", data: { confirm: "ログアウトしますか?" } %>

                <button class="hamburger-btn" id="hamburgerBtn" aria-label="メニュー">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </button>
            </div>
        </header>

        <!-- ハンバーガーメニュー（オーバーレイ） -->
        <div class="hamburger-menu" id="hamburgerMenu">
            <div class="hamburger-menu-content">
                <button class="close-menu-btn" id="closeMenuBtn" aria-label="閉じる">✕</button>

                <nav class="hamburger-nav">
                    <ul>
                        <li>
                            <%= link_to admin_dashboard_path, class: "hamburger-link" do %>
                            <span class="nav-icon">🏠</span>
                            <span>ホーム</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_products_path, class: "hamburger-link" do %>
                            <span class="nav-icon">📦</span>
                            <span>商品一覧</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_admin_product_path, class: "hamburger-link" do %>
                            <span class="nav-icon">➕</span>
                            <span>商品を追加</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_recommended_products_path, class: "hamburger-link" do %>
                            <span class="nav-icon">⭐</span>
                            <span>おすすめ商品</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_seasonal_products_path, class: "hamburger-link" do %>
                            <span class="nav-icon">🌸</span>
                            <span>季節限定商品</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_news_index_path, class: "hamburger-link" do %>
                            <span class="nav-icon">📢</span>
                            <span>お知らせ</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_calendar_path, class: "hamburger-link" do %>
                            <span class="nav-icon">📅</span>
                            <span>営業カレンダー</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_inquiries_path, class: "hamburger-link" do %>
                            <span class="nav-icon">✉️</span>
                            <span>お問い合わせ</span>
                            <% end %>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- メインコンテンツ -->
        <main class="main-content">
            <% if notice %>
            <div class="alert alert-success"><%= notice %></div>
            <% end %>
            <% if alert %>
            <div class="alert alert-danger"><%= alert %></div>
            <% end %>

            <%= yield %>
        </main>
    </div>

    <script>
        // ハンバーガーメニューの開閉
        document.addEventListener('DOMContentLoaded', function() {
            const hamburgerBtn = document.getElementById('hamburgerBtn');
            const hamburgerMenu = document.getElementById('hamburgerMenu');
            const closeMenuBtn = document.getElementById('closeMenuBtn');

            if (hamburgerBtn) {
                hamburgerBtn.addEventListener('click', function() {
                    hamburgerMenu.classList.add('active');
                    document.body.style.overflow = 'hidden';
                });
            }

            if (closeMenuBtn) {
                closeMenuBtn.addEventListener('click', function() {
                    hamburgerMenu.classList.remove('active');
                    document.body.style.overflow = 'auto';
                });
            }

            // メニュー外をクリックしたら閉じる
            if (hamburgerMenu) {
                hamburgerMenu.addEventListener('click', function(e) {
                    if (e.target === hamburgerMenu) {
                        hamburgerMenu.classList.remove('active');
                        document.body.style.overflow = 'auto';
                    }
                });
            }
        });
    </script>
</body>

</html>